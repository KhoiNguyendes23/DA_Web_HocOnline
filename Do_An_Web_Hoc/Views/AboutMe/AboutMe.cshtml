@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Về Chúng Tôi";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

<section class="about-us py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="font-weight-bold mb-4">@Localizer["TitleAboutUs"]</h2>
                <p class="text-muted mb-4">
                    @Localizer["AboutSub"]
                </p>
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary">@Localizer["Mission"]</h5>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle me-2 text-primary"></i>@Localizer["CreativeSolutions"]</li>
                            <li><i class="bi bi-check-circle me-2 text-primary"></i>@Localizer["StudentSatisfaction"]</li>
                            <li><i class="bi bi-check-circle me-2 text-primary"></i>@Localizer["SustainablePractices"]</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h5 class="text-primary">@Localizer["OurVision"]</h5>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-bullseye me-2 text-primary"></i>@Localizer["GlobalReach"]</li>
                            <li><i class="bi bi-bullseye me-2 text-primary"></i>@Localizer["IndustryLeader"]</li>
                            <li><i class="bi bi-bullseye me-2 text-primary"></i>@Localizer["ContinuousGrowth"]</li>
                        </ul>
                    </div>
                </div>
                <a asp-controller="Contact" asp-action="Index" class="btn btn-primary mt-4">Liên Hệ Tư Vấn</a>
            </div>
            <div class="col-md-6 mb-3">
                <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w0NzEyNjZ8MHwxfHNlYXJjaHw4fHxjb21wYW55fGVufDB8MHx8fDE3MjEyMTE5MDZ8MA&ixlib=rb-4.0.3&q=80&w=1080" alt="About Us" class="img-fluid rounded shadow">
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-3 col-6 mb-4">
                <div class="text-center">
                    <i class="bi bi-people fs-1 text-primary mb-2"></i>
                    <h2 class="fw-bold">500+</h2>
                    <p class="text-muted">Học viên</p>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="text-center">
                    <i class="bi bi-briefcase fs-1 text-primary mb-2"></i>
                    <h2 class="fw-bold">1000+</h2>
                    <p class="text-muted">Dự án</p>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="text-center">
                    <i class="bi bi-trophy fs-1 text-primary mb-2"></i>
                    <h2 class="fw-bold">50+</h2>
                    <p class="text-muted">Giải thưởng</p>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="text-center">
                    <i class="bi bi-globe fs-1 text-primary mb-2"></i>
                    <h2 class="fw-bold">20+</h2>
                    <p class="text-muted">Quốc Gia</p>
                </div>
            </div>
        </div>
    </div>
</section>

