@{
    ViewBag.Title = "Tạo Học Viên";
}

<h2>Tạo Học Viên Mới</h2>

<form asp-action="CreateStudent" method="post">
    <div>
        <label>Họ tên:</label>
        <input type="text" name="fullName" required />
    </div>
    <div>
        <label>Email:</label>
        <input type="email" name="email" required />
    </div>
    <button type="submit">Tạo Học Viên</button>
</form>
