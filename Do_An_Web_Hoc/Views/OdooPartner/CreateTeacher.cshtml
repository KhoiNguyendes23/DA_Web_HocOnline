@{
    ViewBag.Title = "Tạo Giảng Viên";
}

<h2>Tạo Giảng Viên Mới</h2>

<form asp-action="CreateTeacher" method="post">
    <div>
        <label>Họ tên:</label>
        <input type="text" name="fullName" required />
    </div>
    <div>
        <label>Email:</label>
        <input type="email" name="email" required />
    </div>
    <button type="submit">Tạo Giảng Viên</button>
</form>
