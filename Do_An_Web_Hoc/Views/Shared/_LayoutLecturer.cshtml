@{
    var fullName = ViewData["FullName"]?.ToString() ?? "Giảng viên";
    var role = ViewData["RoleName"]?.ToString() ?? "Giảng viên";

    // Xử lý ảnh đại diện từ ViewData
    var rawImage = ViewData["ImagePath"]?.ToString();
    var imagePath = Url.Content(
        string.IsNullOrEmpty(rawImage)
            ? "~/images/Avatar_images/default-avatar.png"
            : rawImage.StartsWith("~") || rawImage.StartsWith("/")
                ? rawImage
                : "~/images/Avatar_images/" + rawImage
    );
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Lecturer Dashboard</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

    <!-- Giao diện -->
    <link rel="stylesheet" href="~/css/Lecturer.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column flex-shrink-0 position-fixed">
            <button class="toggle-btn" onclick="toggleSidebar()">
                <i class="fas fa-chevron-left"></i>
            </button>

            <!-- Thông tin giảng viên -->
            <div class="profile-section">
                <div class="d-flex align-items-center">
                    <img src="@imagePath"
                         onerror="this.onerror=null; this.src='@Url.Content("~/images/Avatar_images/default-avatar.png")';"
                         style="height:60px" class="rounded-circle" alt="Avatar" />
                    <div class="ms-3 profile-info">
                        <h6 class="text-white mb-0">@fullName</h6>
                        <small class="text-muted">@role</small>
                    </div>
                </div>
            </div>

            <!-- Sidebar menu -->
            <div class="nav flex-column">
                <!-- Bài giảng -->
                <a href="#" class="sidebar-link p-3" onclick="toggleMenu('lecture-menu')">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <span class="hide-on-collapse">Quản lý bài giảng</span>
                    <i class="fas fa-chevron-down dropdown-icon"></i>
                </a>
                <div id="lecture-menu" class="submenu">
                    <a href="@Url.Action("ListLecture", "Lecturer")" class="submenu-link">Danh sách bài giảng</a>
                    <a href="@Url.Action("AddLecture", "Lecturer")" class="submenu-link">Thêm bài giảng</a>
                </div>

                <!-- Khóa học -->
                <a href="#" class="sidebar-link p-3" onclick="toggleMenu('course-menu')">
                    <i class="fas fa-book"></i>
                    <span class="hide-on-collapse">Quản lý khóa học</span>
                    <i class="fas fa-chevron-down dropdown-icon"></i>
                </a>
                <div id="course-menu" class="submenu">
                    <a href="@Url.Action("ListCourse", "Lecturer")" class="submenu-link">Danh sách khóa học</a>
                </div>

                <!-- Học viên -->
                <a href="#" class="sidebar-link p-3" onclick="toggleMenu('student-menu')">
                    <i class="fas fa-users"></i>
                    <span class="hide-on-collapse">Quản lý học viên</span>
                    <i class="fas fa-chevron-down dropdown-icon"></i>
                </a>
                <div id="student-menu" class="submenu">
                    <a href="@Url.Action("ListStudent", "Lecturer")" class="submenu-link">Danh sách học viên</a>
                </div>

                <!-- Bài kiểm tra -->
                <a href="#" class="sidebar-link p-3" onclick="toggleMenu('exam-menu')">
                    <i class="fas fa-question-circle"></i>
                    <span class="hide-on-collapse">Quản lý bài kiểm tra</span>
                    <i class="fas fa-chevron-down dropdown-icon"></i>
                </a>
                <div id="exam-menu" class="submenu">
                    <a href="@Url.Action("ListExam", "Lecturer")" class="submenu-link">Danh sách bài kiểm tra</a>
                    <a href="@Url.Action("AddExam", "Lecturer")" class="submenu-link">Tạo bài kiểm tra</a>
                    <a href="@Url.Action("ResultExam", "Lecturer")" class="submenu-link">Kết quả bài kiểm tra</a>
                </div>

                <!-- Hồ sơ cá nhân -->
                <a href="@Url.Action("Profile", "Lecturer")" class="sidebar-link p-3">
                    <i class="fas fa-user-circle"></i>
                    <span class="hide-on-collapse">Hồ sơ cá nhân</span>
                </a>

                <!-- Trang chủ -->
                <a href="@Url.Action("Dashboard", "Lecturer")" class="sidebar-link">
                    <i class="fas fa-home me-2"></i>
                    <span class="hide-on-collapse">Trang chủ</span>
                </a>

                <!-- Đăng xuất -->
                <a href="@Url.Action("Logout", "Account")" class="sidebar-link logout-btn p-3">
                    <i class="fas fa-sign-out-alt me-3"></i>
                    <span class="hide-on-collapse">Đăng xuất</span>
                </a>
            </div>

            <!-- Logo -->
            <div class="mt-auto p-4">
                <h4 class="logo-text fw-bold mb-0">NexusFlow</h4>
            </div>
        </nav>

        <!-- Nội dung -->
        <div class="main-content w-100">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
