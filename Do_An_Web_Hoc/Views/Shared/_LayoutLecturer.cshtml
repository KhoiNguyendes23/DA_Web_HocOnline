@{
    var fullName = ViewData["FullName"]?.ToString() ?? User.Identity?.Name ?? "Giảng viên";
    var role = ViewData["RoleName"]?.ToString() ?? User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Giảng viên";
    var imagePath = Url.Content(ViewData["ImagePath"]?.ToString() ?? "~/images/default-avatar.png");
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Lecturer Dashboard</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

    <!-- Giao diện hiện đại -->
    <link rel="stylesheet" href="~/css/Lecturer.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column flex-shrink-0 position-fixed">
            <button class="toggle-btn" onclick="toggleSidebar()">
                <i class="fas fa-chevron-left"></i>
            </button>

            <!-- Thông tin người dùng -->
            <div class="profile-section">
                <div class="d-flex align-items-center">
                    <img src="@imagePath" style="height:60px" class="rounded-circle" alt="Profile">
                    <div class="ms-3 profile-info">
                        <h6 class="text-white mb-0">@fullName</h6>
                        <small class="text-muted">@role</small>
                    </div>
                </div>
            </div>

            <!-- Menu -->
            <div class="nav flex-column">
                <!-- Quản lý bài giảng -->
                <a href="#" class="sidebar-link text-decoration-none p-3" onclick="toggleMenu('lecture-menu')">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <span class="hide-on-collapse">Quản lý bài giảng</span>
                    <i class="fas fa-chevron-down dropdown-icon"></i>
                </a>
                <div id="lecture-menu" class="submenu">
                    <a href="@Url.Action("ListLecture", "Lecturer")" class="submenu-link">Danh sách bài giảng</a>
                    <a href="@Url.Action("AddLecture", "Lecturer")" class="submenu-link">Thêm bài giảng</a>
                </div>

                <!-- Quản lý khóa học -->
                <a href="#" class="sidebar-link text-decoration-none p-3" onclick="toggleMenu('course-menu')">
                    <i class="fas fa-book"></i>
                    <span class="hide-on-collapse">Quản lý khóa học</span>
                    <i class="fas fa-chevron-down dropdown-icon"></i>
                </a>
                <div id="course-menu" class="submenu">
                    <a href="@Url.Action("ListCourse", "Lecturer")" class="submenu-link">Danh sách khóa học</a>
                </div>

                <!-- Quản lý học viên -->
                <a href="#" class="sidebar-link text-decoration-none p-3" onclick="toggleMenu('student-menu')">
                    <i class="fas fa-users"></i>
                    <span class="hide-on-collapse">Quản lý học viên</span>
                    <i class="fas fa-chevron-down dropdown-icon"></i>
                </a>
                <div id="student-menu" class="submenu">
                    <a href="@Url.Action("ListStudent", "Lecturer")" class="submenu-link">Danh sách học viên</a>
                </div>

                <!-- Quản lý bài kiểm tra -->
                <a href="#" class="sidebar-link text-decoration-none p-3" onclick="toggleMenu('exam-menu')">
                    <i class="fas fa-question-circle"></i>
                    <span class="hide-on-collapse">Quản lý bài kiểm tra</span>
                    <i class="fas fa-chevron-down dropdown-icon"></i>
                </a>
                <div id="exam-menu" class="submenu">
                    <a href="@Url.Action("ListExam", "Lecturer")" class="submenu-link">Danh sách bài kiểm tra</a>
                    <a href="@Url.Action("AddExam", "Lecturer")" class="submenu-link">Tạo bài kiểm tra</a>
                    <a href="@Url.Action("ResultExam", "Lecturer")" class="submenu-link">Kết quả bài kiểm tra</a>
                </div>

                <!-- Diễn đàn -->
                <a href="#" class="sidebar-link text-decoration-none p-3">
                    <i class="fas fa-comments"></i>
                    <span class="hide-on-collapse">Diễn đàn khóa học</span>
                </a>

                <!-- Hồ sơ -->
                <a href="@Url.Action("Profile", "Lecturer")" class="sidebar-link text-decoration-none p-3">
                    <i class="fas fa-user-circle"></i>
                    <span class="hide-on-collapse">Hồ sơ cá nhân</span>
                </a>

                <!-- Đăng xuất -->
                <a href="@Url.Action("Logout", "Account")" class="sidebar-link logout-btn text-decoration-none p-3">
                    <i class="fas fa-sign-out-alt me-3"></i>
                    <span class="hide-on-collapse">Đăng xuất</span>
                </a>
            </div>

            <!-- Logo -->
            <div class="mt-auto p-4">
                <h4 class="logo-text fw-bold mb-0">NexusFlow</h4>
            </div>
        </nav>

        <!-- Nội dung chính -->
        <div class="main-content w-100">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
