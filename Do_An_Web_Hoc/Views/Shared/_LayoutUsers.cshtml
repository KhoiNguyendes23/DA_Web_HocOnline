@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - NexusFlow</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap + FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

    <!-- CSS giao diện người dùng -->
    <link rel="stylesheet" href="~/css/LayoutUser.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column flex-shrink-0 position-fixed">
            <button class="toggle-btn" onclick="toggleSidebar()">
                <i class="fas fa-chevron-left"></i>
            </button>

            <div class="profile-section">
                <div class="d-flex align-items-center">
                    <img src="https://randomuser.me/api/portraits/women/70.jpg" class="rounded-circle" style="height: 60px" />
                    <div class="ms-3 profile-info">
                        <h6 class="text-white mb-0">Alex Morgan</h6>
                        <small class="text-muted">User</small>
                    </div>
                </div>
            </div>

            <div class="nav flex-column">
                <!-- KHÓA HỌC CỦA TÔI -->
                <div class="menu-item">
                    <a href="#" class="sidebar-link" onclick="toggleMenu('my-courses-menu')">
                        <i class="fas fa-book"></i> <span class="hide-on-collapse">Khóa học của tôi</span>
                        <i class="fas fa-chevron-down dropdown-icon ms-auto"></i>
                    </a>
                    <div id="my-courses-menu" class="submenu">
                        <a href="#" class="submenu-link" data-view="registered">Đã đăng ký</a>
                        <a href="#" class="submenu-link" data-view="completed">Đã hoàn thành</a>
                    </div>
                </div>

                <!-- DANH MỤC KHÓA HỌC -->
                <div class="menu-item">
                    <a href="#" class="sidebar-link" onclick="toggleMenu('all-courses-menu')">
                        <i class="fas fa-th-list"></i> <span class="hide-on-collapse">Danh mục khóa học</span>
                        <i class="fas fa-chevron-down dropdown-icon ms-auto"></i>
                    </a>
                    <div id="all-courses-menu" class="submenu">
                        <a href="#" class="submenu-link" data-view="FreeCourses">Khóa học miễn phí</a>
                        <a href="#" class="submenu-link" data-view="PaidCourses">Khóa học trả phí</a>
                    </div>
                </div>

                <!-- LUYỆN TẬP -->
                <div class="menu-item">
                    <a href="#" class="sidebar-link" onclick="toggleMenu('practice-menu')">
                        <i class="fas fa-pen-nib"></i> <span class="hide-on-collapse">Luyện tập</span>
                        <i class="fas fa-chevron-down dropdown-icon ms-auto"></i>
                    </a>
                    <div id="practice-menu" class="submenu">
                        <a href="#" class="submenu-link" data-view="Quiz">Trắc nghiệm</a>
                        <a href="#" class="submenu-link" data-view="Practice">Luyện đề</a>
                        <a href="#" class="submenu-link" data-view="Ranking">Xếp hạng</a>
                    </div>
                </div>

                <!-- HỖ TRỢ -->
                <div class="menu-item">
                    <a href="#" class="sidebar-link" onclick="toggleMenu('support-menu')">
                        <i class="fas fa-headphones"></i> <span class="hide-on-collapse">Hỗ trợ</span>
                        <i class="fas fa-chevron-down dropdown-icon ms-auto"></i>
                    </a>
                    <div id="support-menu" class="submenu">
                        <a href="#" class="submenu-link" data-view="Support">Trợ giúp</a>
                        <a href="#" class="submenu-link" data-view="ContactLecturer">Liên hệ giảng viên</a>
                        <a href="#" class="submenu-link" data-view="Community">Cộng đồng</a>

                    </div>
                </div>

                <!-- TÀI KHOẢN CỦA TÔI -->
                <div class="menu-item">
                    <a href="#" class="sidebar-link" onclick="toggleMenu('account-menu')">
                        <i class="fas fa-user"></i> <span class="hide-on-collapse">Tài khoản của tôi</span>
                        <i class="fas fa-chevron-down dropdown-icon ms-auto"></i>
                    </a>
                    <div id="account-menu" class="submenu">
                        <a href="#" class="submenu-link" data-view="Profile">Hồ sơ</a>
                        <a href="#" class="submenu-link" data-view="PaymentHistory">Lịch sử thanh toán</a>
                        <a href="#" class="submenu-link" data-view="SecuritySettings">Cài đặt bảo mật</a>

                    </div>
                </div>

                <a href="@Url.Action("Logout", "Account")" class="sidebar-link logout-btn">
                    <i class="fas fa-sign-out-alt me-2"></i>
                    <span class="hide-on-collapse">Đăng xuất</span>
                </a>
            </div>

            <div class="mt-auto p-4">
                <h4 class="logo-text fw-bold mb-0">NexusFlow</h4>
            </div>
        </nav>

        <!-- Nội dung chính -->
        <div class="main-content" id="main-content">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/LayoutUser.js" asp-append-version="true"></script>
    



</body>
</html>