@{
    Layout = null;

    var fullName = ViewData["FullName"]?.ToString() ?? User.Identity?.Name ?? "User";
    var role = ViewData["RoleName"]?.ToString() ?? "Học viên";
    var imageValue = ViewData["ImagePath"]?.ToString();
    var imagePath = Url.Content(string.IsNullOrEmpty(imageValue)
        ? "~/images/Avatar_images/default-avatar.png"
        : imageValue.StartsWith("/") ? "~" + imageValue : "~/images/Avatar_images/" + imageValue);
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - NexusFlow</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap + FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

    <!-- CSS giao diện người dùng -->
    <link rel="stylesheet" href="~/css/LayoutUser.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column flex-shrink-0 position-fixed">
            <button class="toggle-btn" onclick="toggleSidebar()">
                <i class="fas fa-chevron-left"></i>
            </button>

            <div class="profile-section">
                <div class="d-flex align-items-center">
                    <img src="@imagePath"
                         onerror="this.src='@Url.Content("~/images/Avatar_images/default-avatar.png")';"
                         class="rounded-circle" style="height: 60px" />
                    <div class="ms-3 profile-info">
                        <h6 class="text-white mb-0">@fullName</h6>
                        <small class="text-white">@role</small>
                    </div>
                </div>
            </div>

            <div class="nav flex-column">
                <a href="@Url.Action("Dashboard", "User")" class="sidebar-link">
                    <i class="fas fa-home me-2"></i>
                    <span class="hide-on-collapse">Trang Chủ</span>
                </a>
                <!-- KHÓA HỌC CỦA TÔI -->
                <div class="menu-item">
                    <a href="#" class="sidebar-link" onclick="toggleMenu('my-courses-menu')">
                        <i class="fas fa-book"></i> <span class="hide-on-collapse">Khóa học của tôi</span>
                        <i class="fas fa-chevron-down dropdown-icon ms-auto"></i>
                    </a>
                    <div id="my-courses-menu" class="submenu">
                        <a href="@Url.Action("Enrolled", "User")" class="submenu-link">Đã đăng ký</a>
                        <a href="@Url.Action("NotEnrolled", "User")" class="submenu-link">Chưa đăng ký</a>
                    </div>
                </div>

                <!-- LUYỆN TẮP -->
                <div class="menu-item">
                    <a href="#" class="sidebar-link" onclick="toggleMenu('practice-menu')">
                        <i class="fas fa-pen-nib"></i> <span class="hide-on-collapse">Luyện tập</span>
                        <i class="fas fa-chevron-down dropdown-icon ms-auto"></i>
                    </a>
                    <div id="practice-menu" class="submenu">
                        <a href="@Url.Action("QuizSelection", "User")" class="submenu-link">Trắc nghiệm</a>
                        <a href="@Url.Action("Practice", "User")" class="submenu-link">Luyện đề</a>
                        <a href="@Url.Action("Ranking", "User")" class="submenu-link">Xếp hạng</a>
                    </div>
                </div>

                <!-- HỖ TRỢ -->
                <div class="menu-item">
                    <a href="#" class="sidebar-link" onclick="toggleMenu('support-menu')">
                        <i class="fas fa-headphones"></i> <span class="hide-on-collapse">Hỗ trợ</span>
                        <i class="fas fa-chevron-down dropdown-icon ms-auto"></i>
                    </a>
                    <div id="support-menu" class="submenu">
                        <a href="@Url.Action("Support", "User")" class="submenu-link">Trợ giúp</a>
                        <a href="@Url.Action("ContactLecturer", "User")" class="submenu-link">Liên hệ giảng viên</a>
                        <a href="@Url.Action("Community", "User")" class="submenu-link">Cộng đồng</a>
                    </div>
                </div>

                <!-- TÀI KHOẢN CỦA TÔI -->
                <div class="menu-item">
                    <a href="#" class="sidebar-link" onclick="toggleMenu('account-menu')">
                        <i class="fas fa-user"></i> <span class="hide-on-collapse">Tài khoản của tôi</span>
                        <i class="fas fa-chevron-down dropdown-icon ms-auto"></i>
                    </a>
                    <div id="account-menu" class="submenu">
                        <a href="@Url.Action("Profile", "User")" class="submenu-link">Hồ sơ</a>
                        <a href="@Url.Action("PaymentHistory", "User")" class="submenu-link">Lịch sử thanh toán</a>
                        <a href="@Url.Action("SecuritySettings", "User")" class="submenu-link">Cài đặt bảo mật</a>
                    </div>
                </div>

                

                <a href="@Url.Action("Logout", "Account")" class="sidebar-link logout-btn">
                    <i class="fas fa-sign-out-alt me-2"></i>
                    <span class="hide-on-collapse">Đăng xuất</span>
                </a>
            </div>

            <div class="mt-auto p-4">
                <a asp-controller="Home" asp-action="Index">
                    <h4 class="logo-text fw-bold mb-0">KTDAH</h4>
                </a>
            </div>
        </nav>

        <!-- Nội dung chính -->
        <div class="main-content" id="main-content">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/LayoutUser.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
