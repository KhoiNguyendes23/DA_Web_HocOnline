@model Do_An_Web_Hoc.Models.CourseDetailViewModel

@{
    ViewData["Title"] = "Chi tiết khóa học";
}

<link href="~/css/coursedetails.css" rel="stylesheet" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">



<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-0" src="@Model.Course.ImageUrl" alt="@Model.Course.CourseName" />
            </div>
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder">@Model.Course.CourseName</h1>
                <div class="fs-5 mb-5">
                    <span>@Model.Course.Price?.ToString("N0") VNĐ</span>
                </div>
                <p class="lead">@Model.Course.Description</p>
                <div class="d-flex">
                    <a asp-controller="Account" asp-action="Index" class="btn btn-outline-primary flex-shrink-0">
                        Đăng Ký Học
                    </a>
                </div>
            </div>
        </div>

        <hr class="my-4" />

        <!-- Danh sách video bài giảng -->
        <div class="card mt-5 shadow-sm rounded-4 border">
            <div class="card-header bg-white border-bottom-0 py-3">
                <h5 class="fw-bold mb-0">
                    <i class="bi bi-journal-text me-2 text-primary"></i> Lộ trình khóa học
                </h5>
            </div>
            <div class="card-body pt-0">
                <ul class="list-group list-group-flush">
                    @if (Model.Lectures != null && Model.Lectures.Any())
                    {
                        int index = 1;
                        @foreach (var lecture in Model.Lectures)
                        {
                            <li class="list-group-item border-0 px-0">
                                <span class="text-primary d-block mb-1">
                                    <i class="bi bi-play-circle-fill me-2"></i>
                                    <strong>Bài @index:</strong> @lecture.Title
                                </span>

                                @if (!string.IsNullOrWhiteSpace(lecture.Content))
                                {
                                    <div class="text-muted ps-4 mb-2">@lecture.Content</div>
                                }

                            </li>
                            index++;
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-muted">Chưa có bài giảng nào.</li>
                    }
                </ul>
            </div>
        </div>


    </div>
</section>
