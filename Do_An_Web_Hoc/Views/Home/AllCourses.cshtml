@model IEnumerable<Do_An_Web_Hoc.Models.Courses>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Tất cả khóa học";
    var searchString = Context.Request.Query["searchString"].ToString();
}

<link rel="stylesheet" href="~/css/allcourses.css" asp-append-version="true" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">



<section class="py-5">
    <div class="container mt-4">
        <h2 class="text-center fw-bold mb-3">TẤT CẢ KHÓA HỌC</h2>
        <hr class="my-3" />

        <!-- Thanh tìm kiếm -->
        <div class="row justify-content-end mb-3">
            <div class="col-md-6 col-lg-4">
                <form asp-controller="Home" asp-action="AllCourses" method="get" class="search-container">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control search-input" placeholder="Nhập tên khóa học cần tìm..." value="@searchString" />
                        <button type="submit" class="search-icon">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Thông báo nếu không tìm thấy -->
        @if (ViewBag.SearchMessage != null)
        {
            <div class="row">
                <div class="col">
                    <div class="alert alert-warning text-center">
                        @ViewBag.SearchMessage
                    </div>
                </div>
            </div>
        }

        <!-- Danh sách khóa học -->
        <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-3 row-cols-xl-3 justify-content-center mt-4">
            @foreach (var course in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100 d-flex flex-column">
                        <!-- Hình ảnh khóa học -->
                        <div class="course-img-container">
                            <img class="course-img card-img-top" src="@course.ImageUrl" alt="@course.CourseName" />
                        </div>

                        <!-- Nội dung -->
                        <div class="card-body p-4 flex-grow-1 text-center">
                            <h5 class="fw-bolder">@course.CourseName</h5>
                        </div>

                        <!-- Hành động -->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-outline-primary btn-sm" asp-action="CourseDetails" asp-route-id="@course.CourseID">
                                    <i class="bi bi-eye"></i> Chi Tiết Khóa Học
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Bootstrap core JS -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
}
