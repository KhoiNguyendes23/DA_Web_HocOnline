@model Do_An_Web_Hoc.Models.UserAccount
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chi tiết học viên";
}

<div class="container mt-5">
    <h2 class="text-center text-primary">Thông Tin Học Viên</h2>

    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h5 class="card-title"><i class="fas fa-user"></i> @Model.FullName</h5>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Số Điện Thoại:</strong> @Model.PhoneNumber</p>
            <p><strong>Ngày Sinh:</strong> @Model.Birthday?.ToString("dd/MM/yyyy")</p>
            <p><strong>Trạng Thái:</strong> @(Model.Status == 1 ? "Đang học" : "Ngừng học")</p>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("ListStudent", "Admin")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    </div>
</div>
