            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .course-title {
            color: #1e3a8a;
            font-weight: bold;
        }

        .btn-back {
            display: block;
            margin-top: 20px;
            text-align: center;
        }

        .status-badge {
            font-size: 14px;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .open-status {
            background-color: #28a745;
            color: white;
        }

        .closed-status {
            background-color: #dc3545;
            color: white;
        }
