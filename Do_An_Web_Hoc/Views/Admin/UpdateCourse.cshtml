@model Do_An_Web_Hoc.Models.Courses
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Cập Nhật Khóa Học";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4"><i class="fas fa-edit"></i> Cập Nhật Khóa Học</h2>

    <form asp-action="UpdateCourse" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="CourseID" />

        <div class="mb-3">
            <label asp-for="CourseName" class="form-label">Tên Khóa Học</label>
            <input asp-for="CourseName" class="form-control" placeholder="Nhập tên khóa học" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô Tả</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Giá</label>
            <input asp-for="Price" type="number" class="form-control" placeholder="VD: 1000000" />
        </div>

        <div class="mb-3">
            <label asp-for="CategoryID" class="form-label">Danh Mục</label>
            <select asp-for="CategoryID" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Value", "Text"))">
                <option value="">-- Chọn danh mục --</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label">Trạng Thái</label>
            <select asp-for="Status" class="form-select" asp-items="@(new SelectList(ViewBag.StatusOptions, "Value", "Text"))">
                <option value="">-- Chọn trạng thái --</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Chọn ảnh</label>
            <input type="file" name="image" id="image" class="form-control" accept="image/*" />
        </div>

        <div class="mb-3">
            <label class="form-label">Ảnh hiện tại:</label><br />
            <img id="current-preview" src="@Model.ImageUrl" width="220" class="img-thumbnail shadow" />
        </div>

        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Cập nhật</button>
        <a asp-action="ListCourse" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left"></i> Quay lại</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("image").addEventListener("change", function () {
            const [file] = this.files;
            if (file) {
                const preview = document.getElementById("current-preview");
                preview.src = URL.createObjectURL(file);
            }
        });
    </script>
}
