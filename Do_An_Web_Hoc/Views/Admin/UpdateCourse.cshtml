@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cập Nhật Khóa Học</title>

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            background: #1e3a8a;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            color: white;
            padding-top: 20px;
        }

        .sidebar-menu li {
            list-style: none;
            padding: 10px;
        }

            .sidebar-menu li a {
                text-decoration: none;
                color: white;
                display: block;
                padding: 10px;
            }

                .sidebar-menu li a:hover {
                    background: rgba(255,255,255,0.2);
                    border-radius: 5px;
                }

        .container {
            max-width: 600px;
            background: white;
            padding: 20px;
            margin-top: 50px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-save {
            width: 100%;
            font-size: 18px;
        }

        .btn-back {
            display: block;
            margin-top: 15px;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="text-center">
            <i class="fas fa-user-circle fa-3x"></i>
            <h5>Nguyễn Văn A</h5>
            <p>Admin</p>
        </div>
        <ul class="sidebar-menu">
            <li class="dropdown">
                <a href="#courseSubmenu" data-bs-toggle="collapse" class="dropdown-toggle"><i class="fas fa-book-open"></i> Quản lý khóa học</a>
                <ul class="collapse list-unstyled" id="courseSubmenu">
                    <li><a href="ListCourse">Danh sách khóa học</a></li>
                    <li><a href="AddCourse">Thêm khóa học</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#studentSubmenu" data-bs-toggle="collapse" class="dropdown-toggle"><i class="fas fa-users"></i> Quản lý học viên</a>
                <ul class="collapse list-unstyled" id="studentSubmenu">
                    <li><a href="ListStudent">Danh sách học viên</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#examSubmenu" data-bs-toggle="collapse" class="dropdown-toggle"><i class="fas fa-question-circle"></i> Quản lý bài kiểm tra</a>
                <ul class="collapse list-unstyled" id="examSubmenu">
                    <li><a href="ListExam">Danh sách bài kiểm tra</a></li>
                    <li><a href="AddExam">Tạo bài kiểm tra</a></li>
                    <li><a href="TestResult">Kết quả kiểm tra</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#reportSubmenu" data-bs-toggle="collapse" class="dropdown-toggle"><i class="fas fa-file-alt"></i> Thống kê & Báo cáo</a>
                <ul class="collapse list-unstyled" id="reportSubmenu">
                    <li><a href="StatisticalCourse">Thống kê khóa học</a></li>
                    <li><a href="StatisticalRevenue">Doanh thu</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#settingsSubmenu" data-bs-toggle="collapse" class="dropdown-toggle"><i class="fas fa-wrench"></i> Cài đặt tài khoản</a>
                <ul class="collapse list-unstyled" id="settingsSubmenu">
                    <li><a href="PersonalPage">Thông tin cá nhân</a></li>
                    <li><a href="Decentralization">Phân quyền người dùng</a></li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="container">
        <h2 class="text-primary text-center mb-4">Cập Nhật Khóa Học</h2>

        <form action="SaveUpdatedCourse" method="post">
            <!-- Tên khóa học -->
            <div class="form-group">
                <label for="courseName"><i class="fas fa-book"></i> Tên khóa học</label>
                <input type="text" class="form-control" id="courseName" name="courseName" value="Python cơ bản" required>
            </div>

            <!-- Giảng viên -->
            <div class="form-group">
                <label for="instructor"><i class="fas fa-chalkboard-teacher"></i> Giảng viên</label>
                <input type="text" class="form-control" id="instructor" name="instructor" value="Nguyễn Văn B" required>
            </div>

            <!-- Số học viên -->
            <div class="form-group">
                <label for="students"><i class="fas fa-users"></i> Số học viên</label>
                <input type="number" class="form-control" id="students" name="students" value="30" required>
            </div>

            <!-- Mô tả khóa học -->
            <div class="form-group">
                <label for="description"><i class="fas fa-info-circle"></i> Mô tả khóa học</label>
                <textarea class="form-control" id="description" name="description" rows="3">Khóa học Python cơ bản giúp học viên làm quen với cú pháp, thư viện và ứng dụng của Python trong thực tế.</textarea>
            </div>

            <!-- Thời gian học -->
            <div class="form-group">
                <label for="duration"><i class="fas fa-clock"></i> Thời gian học</label>
                <input type="text" class="form-control" id="duration" name="duration" value="20 buổi (10 tuần)" required>
            </div>

            <!-- Trạng thái khóa học -->
            <div class="form-group">
                <label for="status"><i class="fas fa-toggle-on"></i> Trạng thái</label>
                <select class="form-select" id="status" name="status">
                    <option value="open" selected>Mở</option>
                    <option value="closed">Đóng</option>
                </select>
            </div>

            <!-- Nút lưu -->
            <button type="submit" class="btn btn-primary btn-save"><i class="fas fa-save"></i> Lưu Thay Đổi</button>

            <!-- Nút quay lại -->
            <a href="ListCourse" class="btn btn-secondary btn-back"><i class="fas fa-arrow-left"></i> Quay lại</a>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
