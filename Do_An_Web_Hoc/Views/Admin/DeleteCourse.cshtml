@model Do_An_Web_Hoc.Models.Courses
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Xóa khóa học";
}

<div class="container mt-5">
    <h3 class="text-danger mb-4">Xóa mềm khóa học</h3>

    <div class="card p-4 shadow-sm">
        <h5>Tên khóa học: @Model.CourseName</h5>
        <p><strong>Mô tả:</strong> @Model.Description</p>
        <p><strong>Giá:</strong> @Model.Price?.ToString("N0") VNĐ</p>
        <p><strong>Trạng thái:</strong> @(Model.Status == 1 ? "Hoạt động" : "Ngừng hoạt động")</p>
    </div>

    <div class="mt-4">
        <form asp-action="DeleteCourse" method="post">
            <input type="hidden" name="id" value="@Model.CourseID" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Xác nhận ngừng hoạt động</button>
            <a asp-action="ListCourse" class="btn btn-secondary ms-2">Quay lại</a>
        </form>
    </div>
</div>
