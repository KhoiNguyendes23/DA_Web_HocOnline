@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xóa Khóa Học</title>

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link href="~/css/Admin.css" rel="stylesheet" />
</head>
<body>
   
    <div class="container">
        <i class="fas fa-exclamation-triangle warning-icon"></i>
        <h2 class="text-danger mt-3">Xác Nhận Xóa</h2>
        <p>Bạn có chắc chắn muốn xóa khóa học <strong>"Python Cơ Bản"</strong> không?</p>

        <form action="ConfirmDeleteCourse" method="post">
            <input type="hidden" name="courseId" value="1"> <!-- Truyền ID khóa học cần xóa -->

            <div class="btn-group">
                <button type="submit" class="btn btn-danger btn-delete"><i class="fas fa-trash"></i> Xóa</button>
                <a href="ListCourse" class="btn btn-secondary btn-cancel"><i class="fas fa-times"></i> Hủy</a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
