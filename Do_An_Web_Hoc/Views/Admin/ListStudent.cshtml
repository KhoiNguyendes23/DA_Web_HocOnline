@model IEnumerable<Do_An_Web_Hoc.Models.UserAccount>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách sinh viên</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="d-flex align-items-center gap-2 fw-bold text-primary border-bottom pb-2 mb-4">
            <i class="fas fa-user-graduate fa-lg"></i>
            Danh sách sinh viên
        </h2>

        <div class="mb-3">
            <label class="form-label fw-bold me-2">Lọc trạng thái:</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input status-filter" type="checkbox" value="Đang học" id="statusActive" checked>
                <label class="form-check-label" for="statusActive">Đang học</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input status-filter" type="checkbox" value="Ngừng học" id="statusStopped" checked>
                <label class="form-check-label" for="statusStopped">Ngừng học</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input status-filter" type="checkbox" value="Bị cấm" id="statusBanned" checked>
                <label class="form-check-label" for="statusBanned">Bị cấm</label>
            </div>
        </div>

        <table id="studentTable" class="table table-bordered table-striped">
            <thead class="table-primary">
                <tr>
                    <th class="text-center">STT</th>
                    <th class="text-center">Tên sinh viên</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Trạng thái</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr class="text-center">
                        <td>@student.UserID</td>
                        <td>@student.FullName</td>
                        <td>@student.Email</td>
                        <td>
                            @if (student.Status == 1)
                            {
                                <span class="badge bg-success">Đang học</span>
                            }
                            else if (student.Status == 2)
                            {
                                <span class="badge bg-secondary">Ngừng học</span>
                            }
                            else if (student.Status == 3)
                            {
                                <span class="badge bg-dark">Bị cấm</span>
                            }

                        </td>
                        <td>
                            <a href="@Url.Action("ViewStudent", "Admin", new { id = student.UserID })" class="btn btn-sm btn-info"><i class="fas fa-eye"></i> Xem</a>
                            <a href="@Url.Action("UpdateStudent", "Admin", new { id = student.UserID })" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Sửa</a>
                            <a href="@Url.Action("DeleteStudent", "Admin", new { id = student.UserID })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Thêm các thư viện JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            // Khởi tạo bảng và gán vào biến table
            var table = $('#studentTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthMenu": [5, 10, 20],
                "language": {
                    "search": "Tìm kiếm:",
                    "lengthMenu": "Hiển thị _MENU_ sinh viên",
                    "info": "Hiển thị _START_ đến _END_ của _TOTAL_ sinh viên",
                    "infoEmpty": "Không có dữ liệu",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Tiếp",
                        "previous": "Trước"
                    }
                }
            });

            // Lọc trạng thái theo checkbox
            $('.status-filter').on('change', function () {
                var selected = [];

                $('.status-filter:checked').each(function () {
                    selected.push($(this).val());
                });

                var regex = selected.join("|"); // "Đang học|Ngừng học|Bị cấm"
                table.column(4).search(regex, true, false).draw(); // Cột 4 là "Trạng thái"
            });
        });
    </script>
</body>
</html>
