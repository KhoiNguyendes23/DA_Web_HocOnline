@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm khóa học</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/css/Admin.css" rel="stylesheet" />
</head>
<body>
   
    <div class="content">
        <h2 class="mb-4 text-primary">Thêm khóa học</h2>
        <form>
            <div class="mb-3">
                <label class="form-label text-primary">Tên khóa học</label>
                <input type="text" class="form-control" placeholder="Nhập tên khóa học" required>
            </div>
            <div class="mb-3">
                <label class="form-label text-primary">Giảng viên</label>
                <input type="text" class="form-control" placeholder="Nhập tên giảng viên" required>
            </div>
            <div class="mb-3">
                <label class="form-label text-primary">Mô tả khóa học</label>
                <textarea class="form-control" rows="4" placeholder="Mô tả chi tiết về khóa học" required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label text-primary">Hình minh họa</label>
                <input type="file" class="form-control" accept="image/*" required>
            </div>
            <button type="submit" class="btn btn-primary">Thêm khóa học</button>
        </form>
    </div>

</body>
</html>
