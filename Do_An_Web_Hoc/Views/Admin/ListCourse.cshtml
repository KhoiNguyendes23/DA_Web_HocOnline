@model IEnumerable<Do_An_Web_Hoc.Models.Courses>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Danh Sách Khóa Học";
}

@section Styles {
    <link rel="stylesheet" href="~/css/ListCourse.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
}

<div class="container mt-4">
    <h3 class="fw-bold fs-2 mb-4">
        <i class="fas fa-graduation-cap text-primary me-2"></i>
        Danh Sách Khóa Học
    </h3>

    <div class="mb-3">
        <strong>Lọc theo trạng thái:</strong>
        <label class="ms-2"><input type="checkbox" class="status-filter" value="Hoạt động" checked /> Hoạt động</label>
        <label class="ms-2"><input type="checkbox" class="status-filter" value="Ngừng hoạt động" checked /> Ngừng hoạt động</label>
    </div>

    <table id="courseTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên khóa học</th>
                <th>Giá</th>
                <th>Trạng thái</th>
                <th>Loại khóa học</th>  <!-- Cột mới -->
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseID</td>
                    <td>@course.CourseName</td>
                    <td>@String.Format("{0:N0} VNĐ", course.Price)</td>
                    <td>
                        @if (course.Status == 1)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Ngừng hoạt động</span>
                        }
                    </td>
                    <td>
                        @{
                            if (course.Type == null)
                            {
                                <span class="badge bg-secondary">Chưa phân loại</span>
                            }
                            else if (course.Type == Do_An_Web_Hoc.Models.CourseType.Video)
                            {
                                <span class="badge bg-primary">Video</span>
                            }
                            else if (course.Type == Do_An_Web_Hoc.Models.CourseType.Live)
                            {
                                <span class="badge bg-success">Trực tuyến</span>
                            }
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("ViewCourse", "Admin", new { id = course.CourseID })" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i> Xem
                        </a>
                        <a href="@Url.Action("UpdateCourse", "Admin", new { id = course.CourseID })" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a href="@Url.Action("DeleteCourse", "Admin", new { id = course.CourseID })" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#courseTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                lengthMenu: [5, 10, 20],
                language: {
                    search: "Tìm kiếm:",
                    lengthMenu: "Hiển thị _MENU_ khóa học",
                    info: "Hiển thị _START_ đến _END_ của _TOTAL_ khóa học",
                    infoEmpty: "Không có dữ liệu",
                    paginate: {
                        first: "Đầu",
                        last: "Cuối",
                        next: "Tiếp",
                        previous: "Trước"
                    }
                }
            });

            $('.status-filter').on('change', function () {
                var selected = [];
                $('.status-filter:checked').each(function () {
                    selected.push($(this).val());
                });

                var regex = selected.join('|');
                table.column(3).search(regex, true, false).draw(); // Trạng thái ở cột thứ 4
            });
        });
    </script>
}
