@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using Microsoft.AspNetCore.Mvc.Razor
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách khóa học</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/css/Admin.css" rel="stylesheet" />
</head>
<body>
   

    <div class="content">
        <h3 class="text-primary">Danh sách khóa học</h3>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên khóa học</th>
                    <th>Giảng viên</th>
                    <th>Số học viên</th>
                    <th>Hành động</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Python cơ bản</td>
                    <td>Nguyễn Văn B</td>
                    <td>30</td>
                    <td>
                        <a href="ViewCourse" class="btn btn-sm btn-info"><i class="fas fa-eye"></i> Xem</a>
                        <a href="UpdateCourse" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Sửa</a>
                        <a href="DeleteCourse" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                    </td>
                    <td>
                        <select class="form-select form-select-sm">
                            <option>Mở</option>
                            <option selected>Đóng</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Java nâng cao</td>
                    <td>Trần Văn C</td>
                    <td>25</td>
                    <td>
                        <a href="ViewCourse" class="btn btn-sm btn-info"><i class="fas fa-eye"></i> Xem</a>
                        <a href="UpdateCourse" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Sửa</a>
                        <a href="DeleteCourse" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                    </td>
                    <td>
                        <select class="form-select form-select-sm">
                            <option>Mở</option>
                            <option selected>Đóng</option>
                        </select>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
