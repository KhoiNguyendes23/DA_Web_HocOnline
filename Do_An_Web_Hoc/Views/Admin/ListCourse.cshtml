@model IEnumerable<Do_An_Web_Hoc.Models.Courses>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản Lý Học Viên";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách khóa học</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
</head>
<body>
    <div class="container mt-4">
        <h3 class="fw-bold fs-2 mb-4">
            <i class="fas fa-graduation-cap text-primary me-2"></i>
            Danh Sách Khóa Học
        </h3>
        <div class="mb-3">
            <strong>Lọc theo trạng thái:</strong>
            <label class="ms-2"><input type="checkbox" class="status-filter" value="Hoạt động" checked /> Hoạt động</label>
            <label class="ms-2"><input type="checkbox" class="status-filter" value="Ngừng hoạt động" checked /> Ngừng hoạt động</label>
        </div>

        <table id="courseTable" class="table table-bordered table-striped">
            <thead class="table-primary">
                <tr>
                    <th class="text-center">STT</th>
                    <th class="text-center">Tên khóa học</th>
                    <th class="text-center">Giá</th>
                    <th class="text-center">Trạng thái</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr class="text-center">
                        <td>@course.CourseID</td>
                        <td>@course.CourseName</td>
                        <td>@String.Format("{0:N0} VNĐ", course.Price)</td>
                        <td>
                            @if (course.Status == 1)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Ngừng hoạt động</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("ViewCourse", "Admin", new { id = course.CourseID })" class="btn btn-sm btn-info"><i class="fas fa-eye"></i> Xem</a>
                            <a href="@Url.Action("UpdateCourse", "Admin", new { id = course.CourseID })" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Sửa</a>
                            <a href="@Url.Action("DeleteCourse", "Admin", new { id = course.CourseID })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#courseTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthMenu": [5, 10, 20],
                "language": {
                    "search": "Tìm kiếm:",
                    "lengthMenu": "Hiển thị _MENU_ khóa học",
                    "info": "Hiển thị _START_ đến _END_ của _TOTAL_ khóa học",
                    "infoEmpty": "Không có dữ liệu",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Tiếp",
                        "previous": "Trước"
                    }
                }
            });

            // ✅ Lọc theo trạng thái khi checkbox thay đổi
            $('.status-filter').on('change', function () {
                var selected = [];
                $('.status-filter:checked').each(function () {
                    selected.push($(this).val());
                });

                var regex = selected.join('|'); // Tạo regex từ nhiều trạng thái
                table.column(4).search(regex, true, false).draw(); // Cột 4 là trạng thái
            });
        });
    </script>

</body>
</html>
