@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh Sửa Thông Tin</title>

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            background: #1e3a8a;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            color: white;
            padding-top: 20px;
        }

        .sidebar-menu li {
            list-style: none;
            padding: 10px;
        }

            .sidebar-menu li a {
                text-decoration: none;
                color: white;
                display: block;
                padding: 10px;
            }

                .sidebar-menu li a:hover {
                    background: rgba(255,255,255,0.2);
                    border-radius: 5px;
                }

        .container {
            max-width: 600px;
            background: white;
            padding: 20px;
            margin-top: 50px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-save {
            width: 100%;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="text-center">
            <i class="fas fa-user-circle fa-3x"></i>
            <h5>Nguyễn Văn A</h5>
            <p>Admin</p>
        </div>
        <ul class="sidebar-menu">
            <li class="dropdown">
                <a href="#courseSubmenu" data-bs-toggle="collapse" class="dropdown-toggle"><i class="fas fa-book-open"></i> Quản lý khóa học</a>
                <ul class="collapse list-unstyled" id="courseSubmenu">
                    <li><a href="ListCourse">Danh sách khóa học</a></li>
                    <li><a href="AddCourse">Thêm khóa học</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#studentSubmenu" data-bs-toggle="collapse" class="dropdown-toggle"><i class="fas fa-users"></i> Quản lý học viên</a>
                <ul class="collapse list-unstyled" id="studentSubmenu">
                    <li><a href="ListStudent">Danh sách học viên</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#examSubmenu" data-bs-toggle="collapse" class="dropdown-toggle"><i class="fas fa-question-circle"></i> Quản lý bài kiểm tra</a>
                <ul class="collapse list-unstyled" id="examSubmenu">
                    <li><a href="ListExam">Danh sách bài kiểm tra</a></li>
                    <li><a href="AddExam">Tạo bài kiểm tra</a></li>
                    <li><a href="TestResult">Kết quả kiểm tra</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#reportSubmenu" data-bs-toggle="collapse" class="dropdown-toggle"><i class="fas fa-file-alt"></i> Thống kê & Báo cáo</a>
                <ul class="collapse list-unstyled" id="reportSubmenu">
                    <li><a href="StatisticalCourse">Thống kê khóa học</a></li>
                    <li><a href="StatisticalRevenue">Doanh thu</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#settingsSubmenu" data-bs-toggle="collapse" class="dropdown-toggle"><i class="fas fa-wrench"></i> Cài đặt tài khoản</a>
                <ul class="collapse list-unstyled" id="settingsSubmenu">
                    <li><a href="PersonalPage">Thông tin cá nhân</a></li>
                    <li><a href="Decentralization">Phân quyền người dùng</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("Logout", "Account")" class="text-danger">
                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                </a>
            </li>
        </ul>
    </div>
    <div class="container mt-5">
        <h2 class="text-primary text-center mb-4">Chỉnh Sửa Bài Kiểm Tra</h2>
        <form action="#" method="POST">
            <div class="mb-3">
                <label for="examTitle" class="form-label">Tiêu đề bài kiểm tra</label>
                <input type="text" class="form-control" id="examTitle" name="examTitle" value="Bài kiểm tra Python cơ bản" required>
            </div>
            <div class="mb-3">
                <label for="examDuration" class="form-label">Thời gian làm bài (phút)</label>
                <input type="number" class="form-control" id="examDuration" name="examDuration" value="60" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Danh sách câu hỏi</label>
                <div class="btn-add">
                    <button type="button" class="btn btn-success" onclick="addQuestion()"><i class="fas fa-plus"></i> Thêm câu hỏi</button>
                </div>
                <div id="questionList">
                    <!-- Câu hỏi 1 -->
                    <div class="question-box">
                        <label class="form-label">Câu hỏi</label>
                        <input type="text" class="form-control mb-2" name="questions[]" value="Python là gì?" required>
                        <label class="form-label">Lựa chọn A</label>
                        <input type="text" class="form-control mb-2" name="optionA[]" value="Ngôn ngữ lập trình" required>
                        <label class="form-label">Lựa chọn B</label>
                        <input type="text" class="form-control mb-2" name="optionB[]" value="Một loại rắn" required>
                        <label class="form-label">Lựa chọn C</label>
                        <input type="text" class="form-control mb-2" name="optionC[]" value="Hệ điều hành" required>
                        <label class="form-label">Lựa chọn D</label>
                        <input type="text" class="form-control mb-2" name="optionD[]" value="Trình duyệt web" required>
                        <label class="form-label">Đáp án đúng</label>
                        <select class="form-select mb-2" name="correctAnswer[]" required>
                            <option value="A" selected>A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                        </select>
                        <button type="button" class="btn btn-danger btn-remove" onclick="removeQuestion(this)"><i class="fas fa-trash-alt"></i> Xóa</button>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu Chỉnh Sửa</button>
                <a href="ListExam" class="btn btn-secondary"><i class="fas fa-times"></i> Hủy</a>
            </div>
        </form>
    </div>

    <script>
        function addQuestion() {
            let questionContainer = document.createElement("div");
            questionContainer.classList.add("question-box");
            questionContainer.innerHTML = `
                <label class="form-label">Câu hỏi</label>
                <input type="text" class="form-control mb-2" name="questions[]" placeholder="Nhập câu hỏi" required>
                <label class="form-label">Lựa chọn A</label>
                <input type="text" class="form-control mb-2" name="optionA[]" placeholder="Nhập lựa chọn A" required>
                <label class="form-label">Lựa chọn B</label>
                <input type="text" class="form-control mb-2" name="optionB[]" placeholder="Nhập lựa chọn B" required>
                <label class="form-label">Lựa chọn C</label>
                <input type="text" class="form-control mb-2" name="optionC[]" placeholder="Nhập lựa chọn C" required>
                <label class="form-label">Lựa chọn D</label>
                <input type="text" class="form-control mb-2" name="optionD[]" placeholder="Nhập lựa chọn D" required>
                <label class="form-label">Đáp án đúng</label>
                <select class="form-select mb-2" name="correctAnswer[]" required>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                </select>
                <button type="button" class="btn btn-danger btn-remove" onclick="removeQuestion(this)"><i class="fas fa-trash-alt"></i> Xóa</button>
            `;
            document.getElementById("questionList").appendChild(questionContainer);
        }
        function removeQuestion(button) {
            button.parentElement.remove();
        }
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
