@{
    ViewData["Title"] = "Thêm giáo viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm giáo viên</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-primary text-center">Thêm giáo viên mới</h2>

        <form id="addTeacherForm" action="AddTeacher" method="post">
            <div class="mb-3">
                <label for="teacherName" class="form-label">Họ và Tên</label>
                <input type="text" class="form-control" id="teacherName" name="teacherName" required placeholder="Nhập họ và tên giáo viên">
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required placeholder="Nhập email giáo viên">
            </div>

            <div class="mb-3">
                <label for="phone" class="form-label">Số Điện Thoại</label>
                <input type="text" class="form-control" id="phone" name="phone" required placeholder="Nhập số điện thoại giáo viên">
            </div>

            <div class="mb-3">
                <label for="specialization" class="form-label">Chuyên Môn</label>
                <select class="form-select" id="specialization" name="specialization">
                    <option value="Python">Python</option>
                    <option value="Java">Java</option>
                    <option value="JavaScript">JavaScript</option>
                    <option value="React">React</option>
                    <option value="C#">C#</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="address" class="form-label">Địa chỉ</label>
                <input type="text" class="form-control" id="address" name="address" required placeholder="Nhập địa chỉ giáo viên">
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Lưu Giáo Viên</button>
                <a href="ListTeacher" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS & jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#addTeacherForm").on("submit", function (e) {
                let isValid = true;

                // Kiểm tra rỗng
                $("#addTeacherForm input, #addTeacherForm select").each(function () {
                    if ($(this).val().trim() === "") {
                        isValid = false;
                        $(this).addClass("is-invalid");
                    } else {
                        $(this).removeClass("is-invalid");
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert("Vui lòng nhập đầy đủ thông tin!");
                }
            });
        });
    </script>

</body>
</html>
