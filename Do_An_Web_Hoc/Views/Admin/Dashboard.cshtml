@{
    ViewData["Title"] = "Bảng Điều Khiển";
    var revenueData = (IEnumerable<Do_An_Web_Hoc.Models.RevenueStatisticViewModel>)ViewBag.RevenueStatistics;
    var topCourses = (List<Do_An_Web_Hoc.Models.ViewModels.TopCourseViewModel>)ViewBag.TopCourses;
    var recentUsers = (List<Do_An_Web_Hoc.Models.ViewModels.RecentUserViewModel>)ViewBag.RecentUsers;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">📊 Bảng Điều Khiển Thống Kê</h2>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card border-primary text-center">
                <div class="card-body">
                    <h5 class="card-title">Tổng Học Viên</h5>
                    <p class="display-6 fw-bold">@ViewBag.TotalStudents</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success text-center">
                <div class="card-body">
                    <h5 class="card-title">Tổng Giảng Viên</h5>
                    <p class="display-6 fw-bold">@ViewBag.TotalLecturers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning text-center">
                <div class="card-body">
                    <h5 class="card-title">Tổng Khóa Học</h5>
                    <p class="display-6 fw-bold">@ViewBag.TotalCourses</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger text-center">
                <div class="card-body">
                    <h5 class="card-title">Doanh Thu Tháng</h5>
                    <p class="display-6 fw-bold">@ViewBag.MonthlyRevenue.ToString("N0") đ</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Biểu đồ doanh thu theo tháng
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" height="120"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    Top 5 Khóa Học Đăng Ký Nhiều Nhất
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var course in topCourses)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>@course.CourseName</span>
                            <span class="badge bg-primary">@course.EnrollmentCount</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="card mt-5">
        <div class="card-header bg-info text-white">
            Người Dùng Mới Đăng Ký Gần Đây
        </div>
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Họ Tên</th>
                    <th>Email</th>
                    <th>Vai Trò</th>
                    <th>Ngày Đăng Ký</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in recentUsers)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.RoleName</td>
                        <td>@user.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const revenueCtx = document.getElementById('revenueChart');
        const revenueChart = new Chart(revenueCtx, {
            type: 'bar',
            data: {
                labels: [@string.Join(",", revenueData.Select(d => "\"" + d.Month + "/" + d.Year + "\""))],
                datasets: [{
                    label: 'Doanh thu',
                    data: [@string.Join(",", revenueData.Select(d => d.TotalRevenue))],
                    backgroundColor: 'rgba(54, 162, 235, 0.7)'
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}