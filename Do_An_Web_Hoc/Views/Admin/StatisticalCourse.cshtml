@model IEnumerable<Do_An_Web_Hoc.Models.StatisticalCourseViewModel>
@{
    ViewData["Title"] = "Thống kê khóa học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">📊 Thống kê lượt đăng ký khóa học</h2>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Tên khóa học</th>
                <th>Số lượt đăng ký (đã thanh toán)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CourseName</td>
                    <td>@item.EnrollmentCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>
