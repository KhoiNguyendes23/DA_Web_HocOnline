@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông tin cá nhân</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/css/Admin.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-primary text-center mb-4">Thông tin cá nhân</h2>

        <!-- Hiển thị ảnh đại diện -->
        @if (!string.IsNullOrEmpty(Model.Image) && Model.Image != "/images/default-avatar.png")
        {
            <div class="text-center">
                <img src="@Model.Image" alt="Profile Picture" class="profile-pic img-fluid rounded-circle mb-3" />
            </div>
        }


        <!-- Hiển thị thông tin người dùng -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped mt-4">
                <tbody>
                    <tr>
                        <th>Họ và tên</th>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Số điện thoại</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th>Ngày sinh</th>
                        <td>@Model.Birthday?.ToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <th>Địa chỉ</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th>Vai trò</th>
                        <td>@(Model.RoleID == 1 ? "Admin" : Model.RoleID == 2 ? "Giáo viên" : "Học viên")</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Nút chỉnh sửa thông tin -->
        <div class="text-center mt-4">
            <a href="@Url.Action("UpdatePersonalPage", "Admin")" class="btn btn-primary">
                <i class="fas fa-edit"></i> Chỉnh sửa thông tin
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
