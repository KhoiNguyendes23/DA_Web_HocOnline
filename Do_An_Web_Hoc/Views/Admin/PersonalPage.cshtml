@model Do_An_Web_Hoc.Models.UserAccount
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container mt-5">
    <h2 class="text-primary text-center mb-4">Thông tin cá nhân</h2>

    @if (!string.IsNullOrEmpty(Model.Image) && Model.Image != "/images/default-avatar.png")
    {
        <div class="text-center">
            <img src="@Model.Image" alt="Ảnh đại diện" class="img-fluid rounded-circle mb-3" style="max-width: 200px;" />
        </div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <tr><th>Họ và tên</th><td>@Model.FullName</td></tr>
            <tr><th>Email</th><td>@Model.Email</td></tr>
            <tr><th>Số điện thoại</th><td>@Model.PhoneNumber</td></tr>
            <tr><th>Ngày sinh</th><td>@Model.Birthday?.ToString("dd/MM/yyyy")</td></tr>
            <tr><th>Địa chỉ</th><td>@Model.Address</td></tr>
            <tr>
                <th>Vai trò</th>
                <td>@(Model.RoleID == 1 ? "Admin" : Model.RoleID == 2 ? "Giáo viên" : "Học viên")</td>
            </tr>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("UpdatePersonalPage", "Admin")" class="btn btn-primary">
            <i class="fas fa-edit"></i> Chỉnh sửa thông tin
        </a>
    </div>
</div>
