@model IEnumerable<Do_An_Web_Hoc.Models.RevenueStatisticViewModel>
@{
    ViewData["Title"] = "Thống kê doanh thu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var labels = Model.Select(m => $"Tháng {m.Month}/{m.Year}").ToList();
    var revenues = Model.Select(m => m.TotalRevenue).ToList();
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">💰 Thống kê doanh thu theo tháng</h2>

    <div class="mb-3">
        <a asp-action="ExportRevenueToExcel" class="btn btn-success">
            <i class="fa fa-file-excel"></i> Xuất Excel
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <canvas id="barChart"></canvas>
        </div>
        <div class="col-md-6">
            <canvas id="pieChart"></canvas>
        </div>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Năm</th>
                <th>Tháng</th>
                <th>Số lượt đăng ký</th>
                <th>Tổng doanh thu (VNĐ)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Year</td>
                    <td>@item.Month</td>
                    <td>@item.TotalEnrollments</td>
                    <td>@String.Format("{0:N0} ₫", item.TotalRevenue)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const labels = @Html.Raw(Json.Serialize(labels));
        const revenues = @Html.Raw(Json.Serialize(revenues));

        const backgroundColors = labels.map(() => {
            const r = Math.floor(Math.random() * 255);
            const g = Math.floor(Math.random() * 255);
            const b = Math.floor(Math.random() * 255);
            return `rgba(${r}, ${g}, ${b}, 0.6)`;
        });

        new Chart(document.getElementById('barChart'), {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Doanh thu (VNĐ)',
                    data: revenues,
                    backgroundColor: backgroundColors,
                    borderColor: 'rgba(0,0,0,0.2)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false },
                    title: { display: true, text: 'Biểu đồ cột - Doanh thu theo tháng' }
                }
            }
        });

        new Chart(document.getElementById('pieChart'), {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    data: revenues,
                    backgroundColor: backgroundColors
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: { display: true, text: 'Biểu đồ tròn - Tỷ lệ doanh thu' }
                }
            }
        });
    </script>
}
