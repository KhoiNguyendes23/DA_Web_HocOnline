@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Báo cáo doanh thu</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.5/FileSaver.min.js"></script>
    <link href="~/css/Admin.css" rel="stylesheet" />
</head>
<body>
    

    <div class="content">
        <h2 class="mb-4 text-primary">Báo cáo doanh thu</h2>
        <button class="btn btn-success mb-3" onclick="exportReport()"><i class="fas fa-file-download"></i> Xuất báo cáo</button>

        <table class="table table-bordered table-striped">
            <thead class="table-primary">
                <tr>
                    <th>#</th>
                    <th>Tên khóa học</th>
                    <th>Số học viên</th>
                    <th>Giá (VND)</th>
                    <th>Tổng doanh thu (VND)</th>
                </tr>
            </thead>
            <tbody>
                <tr><td>1</td><td>Python cơ bản</td><td>30</td><td>500,000</td><td>15,000,000</td></tr>
                <tr><td>2</td><td>Java nâng cao</td><td>25</td><td>700,000</td><td>17,500,000</td></tr>
                <tr><td>3</td><td>JavaScript cơ bản</td><td>20</td><td>600,000</td><td>12,000,000</td></tr>
            </tbody>
        </table>

        <div class="mt-4">
            <h4>Tổng doanh thu: <strong>44,500,000 VND</strong></h4>
        </div>
    </div>

    <script>
        function exportReport() {
            let reportContent = "Báo cáo doanh thu\n\n" +
                "# | Tên khóa học | Số học viên | Giá (VND) | Tổng doanh thu (VND)\n" +
                "1 | Python cơ bản | 30 | 500,000 | 15,000,000\n" +
                "2 | Java nâng cao | 25 | 700,000 | 17,500,000\n" +
                "3 | JavaScript cơ bản | 20 | 600,000 | 12,000,000\n" +
                "\nTổng doanh thu: 44,500,000 VND\n";

            let blob = new Blob([reportContent], { type: "text/plain;charset=utf-8" });
            saveAs(blob, "BaoCao_DoanhThu.txt");
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
