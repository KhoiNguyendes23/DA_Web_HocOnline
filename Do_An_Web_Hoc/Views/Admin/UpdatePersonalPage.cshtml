@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh Sửa Thông Tin</title>

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link href="~/css/Admin.css" rel="stylesheet" />
</head>
<body>
    <!-- Sidebar -->
   
    <div class="container">
        <h2 class="text-primary text-center mb-4">Chỉnh Sửa Thông Tin Cá Nhân</h2>

        <form action="SaveProfile" method="post">
            <!-- Họ và tên -->
            <div class="form-group">
                <label for="fullName"><i class="fas fa-user"></i> Họ và tên</label>
                <input type="text" class="form-control" id="fullName" name="fullName" value="Nguyễn Văn A" required>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label for="email"><i class="fas fa-envelope"></i> Email</label>
                <input type="email" class="form-control" id="email" name="email" value="nguyenvana@example.com" required>
            </div>

            <!-- Số điện thoại -->
            <div class="form-group">
                <label for="phone"><i class="fas fa-phone"></i> Số điện thoại</label>
                <input type="tel" class="form-control" id="phone" name="phone" value="0123-456-789" required>
            </div>

            <!-- Ngày sinh -->
            <div class="form-group">
                <label for="dob"><i class="fas fa-calendar"></i> Ngày sinh</label>
                <input type="date" class="form-control" id="dob" name="dob" value="1995-01-01">
            </div>

            <!-- Địa chỉ -->
            <div class="form-group">
                <label for="address"><i class="fas fa-map-marker-alt"></i> Địa chỉ</label>
                <input type="text" class="form-control" id="address" name="address" value="123 Đường ABC, Quận 1, TP.HCM">
            </div>

            <!-- Vai trò (Chỉ hiển thị, không chỉnh sửa) -->
            <div class="form-group">
                <label for="role"><i class="fas fa-user-shield"></i> Vai trò</label>
                <input type="text" class="form-control" id="role" name="role" value="Admin" readonly>
            </div>

            <!-- Nút lưu -->
            <button type="submit" class="btn btn-primary btn-save"><i class="fas fa-save"></i> Lưu Thay Đổi</button>

            <!-- Nút quay lại -->
            <a href="PersonalPage" class="btn btn-secondary mt-3 d-block text-center"><i class="fas fa-arrow-left"></i> Quay lại</a>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
