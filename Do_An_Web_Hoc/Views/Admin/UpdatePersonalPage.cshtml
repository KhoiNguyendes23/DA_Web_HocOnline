@model Do_An_Web_Hoc.Models.UserAccount

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh Sửa Thông Tin Cá Nhân</title>

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/css/Admin.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-primary text-center mb-4">Chỉnh Sửa Thông Tin Cá Nhân</h2>

        <!-- Hiển thị ảnh đại diện -->
        <div class="text-center mb-4">
            <!-- Hiển thị ảnh đại diện của người dùng hoặc ảnh mặc định nếu không có -->
            <img src="@Url.Content(Model.Image ?? "/images/default-avatar.png")" alt="Profile Picture" class="img-fluid rounded-circle" />
        </div>

        <!-- Form chỉnh sửa thông tin cá nhân -->
        <form asp-action="UpdatePersonalPage" method="post" enctype="multipart/form-data">

            <!-- Họ và tên -->
            <div class="form-group">
                <label for="fullName"><i class="fas fa-user"></i> Họ và tên</label>
                <input type="text" class="form-control" id="fullName" name="FullName" value="@Model.FullName" required>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label for="email"><i class="fas fa-envelope"></i> Email</label>
                <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required>
            </div>

            <!-- Số điện thoại -->
            <div class="form-group">
                <label for="phone"><i class="fas fa-phone"></i> Số điện thoại</label>
                <input type="tel" class="form-control" id="phone" name="PhoneNumber" value="@Model.PhoneNumber" required>
            </div>

            <!-- Ngày sinh -->
            <div class="form-group">
                <label for="dob"><i class="fas fa-calendar"></i> Ngày sinh</label>
                <input type="date" class="form-control" id="dob" name="Birthday" value="@Model.Birthday?.ToString("yyyy-MM-dd")">
            </div>

            <!-- Địa chỉ -->
            <div class="form-group">
                <label for="address"><i class="fas fa-map-marker-alt"></i> Địa chỉ</label>
                <input type="text" class="form-control" id="address" name="Address" value="@Model.Address">
            </div>

            <!-- Vai trò (Chỉ hiển thị, không chỉnh sửa) -->
            <div class="form-group">
                <label for="role"><i class="fas fa-user-shield"></i> Vai trò</label>
                <input type="text" class="form-control" id="role" value="@(
                    Model.RoleID == 1 ? "Admin" :
                    Model.RoleID == 2 ? "Giáo viên" : "Học viên")" disabled>
            </div>

            <!-- Trường sửa ảnh đại diện -->
            <div class="form-group">
                <label for="image"><i class="fas fa-image"></i> Sửa ảnh đại diện</label>
                <input type="file" class="form-control" id="image" name="Image" accept="image/*">
            </div>

            <!-- Nút lưu -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu Thay Đổi</button>
            </div>

            <!-- Nút quay lại -->
            <div class="text-center mt-3">
                <a href="@Url.Action("PersonalPage", "Admin")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
