@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cập Nhật Thông Tin Giáo Viên</title>

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link href="~/css/Admin.css" rel="stylesheet" />
</head>
<body>

    <div class="container">
        <h2 class="text-center text-primary">Cập Nhật Thông Tin Giáo Viên</h2>

        <div class="form-group">
            <label for="teacherName"><i class="fas fa-user"></i> Họ và Tên</label>
            <input type="text" class="form-control" id="teacherName" value="Nguyễn Văn B" disabled>
        </div>

        <div class="form-group">
            <label for="email"><i class="fas fa-envelope"></i> Email</label>
            <input type="email" class="form-control" id="email" value="nguyenvanb@example.com" disabled>
        </div>

        <div class="form-group">
            <label for="phone"><i class="fas fa-phone"></i> Số Điện Thoại</label>
            <input type="text" class="form-control" id="phone" value="0987-654-321" disabled>
        </div>

        <div class="form-group">
            <label for="dob"><i class="fas fa-calendar"></i> Ngày Sinh</label>
            <input type="date" class="form-control" id="dob" value="1985-05-15" disabled>
        </div>

        <div class="form-group">
            <label for="address"><i class="fas fa-map-marker-alt"></i> Địa Chỉ</label>
            <input type="text" class="form-control" id="address" value="456 Đường XYZ, Quận 3, TP.HCM" disabled>
        </div>

        <div class="form-group">
            <label for="specialization"><i class="fas fa-chalkboard-teacher"></i> Chuyên Môn</label>
            <select class="form-select" id="specialization" disabled>
                <option>Python</option>
                <option selected>Java</option>
                <option>JavaScript</option>
                <option>C#</option>
                <option>React</option>
            </select>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary btn-save"><i class="fas fa-save"></i> Lưu Thay Đổi</button>
            <a href="ListTeacher" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại</a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
