@model Do_An_Web_Hoc.Models.Courses
@{
    ViewData["Title"] = "Chi tiết khóa học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">📚 Chi tiết khóa học</h2>

    <div class="card shadow p-4">
        <dl class="row">
            <dt class="col-sm-3">Tên khóa học</dt>
            <dd class="col-sm-9">@Model.CourseName</dd>

            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Danh mục</dt>
            <dd class="col-sm-9">@ViewData["CategoryName"]</dd>

            <dt class="col-sm-3">Giá</dt>
            <dd class="col-sm-9">@ViewData["Price"]</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">@ViewData["Status"]</dd>
        </dl>

        <div class="text-end mt-4">
            <a href="@Url.Action("ListCourse", "Admin")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
            <a href="@Url.Action("UpdateCourse", "Admin", new { id = Model.CourseID })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Cập nhật
            </a>
        </div>
    </div>
</div>
