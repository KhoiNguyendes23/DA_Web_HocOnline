@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết khóa học</title>

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link href="~/css/Admin.css" rel="stylesheet" />
</head>
<body>
   
    <div class="container">
        <h2 class="text-center course-title">Chi Tiết Khóa Học</h2>

        <table class="table table-bordered mt-3">
            <tbody>
                <tr>
                    <th width="30%">Tên khóa học</th>
                    <td>Python cơ bản</td>
                </tr>
                <tr>
                    <th>Giảng viên</th>
                    <td>Nguyễn Văn B</td>
                </tr>
                <tr>
                    <th>Số học viên</th>
                    <td>30</td>
                </tr>
                <tr>
                    <th>Trạng thái</th>
                    <td>
                        <span class="status-badge open-status">Mở</span>
                    </td>
                </tr>
                <tr>
                    <th>Mô tả</th>
                    <td>Khóa học Python cơ bản giúp học viên làm quen với cú pháp, thư viện và ứng dụng của Python trong thực tế.</td>
                </tr>
                <tr>
                    <th>Thời gian học</th>
                    <td>20 buổi (10 tuần)</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="ListCourse" class="btn btn-secondary btn-back"><i class="fas fa-arrow-left"></i> Quay lại</a>
            <a href="UpdateCourse" class="btn btn-primary"><i class="fas fa-edit"></i> Chỉnh sửa</a>
            <a href="DeleteCourse" class="btn btn-danger"><i class="fas fa-trash"></i> Xóa khóa học</a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
