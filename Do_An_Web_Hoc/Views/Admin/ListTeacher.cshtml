@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using Microsoft.AspNetCore.Mvc.Razor
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách giáo viên</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <link href="~/css/Admin.css" rel="stylesheet" />
</head>
<body>
    <div class="content">
        <h3 class="text-primary">Danh sách giáo viên</h3>
        <table id="teacherTable" class="table table-bordered table-striped">
            <thead class="table-primary">
                <tr>
                    <th>STT</th>
                    <th>Tên giáo viên</th>
                    <th>Email</th>
                    <th>Chuyên môn</th>
                    <th>Hành động</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Nguyễn Văn A</td>
                    <td>nguyenvana@example.com</td>
                    <td>Lập trình Python</td>
                    <td>
                        <a href="ViewTeacher" class="btn btn-sm btn-info"><i class="fas fa-eye"></i> Xem</a>
                        <a href="UpdateTeacher" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Sửa</a>
                        <a href="DeleteTeacher" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                    </td>
                    <td>
                        <select class="form-select form-select-sm">
                            <option>Đang dạy</option>
                            <option selected>Ngừng dạy</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Trần Thị B</td>
                    <td>tranthib@example.com</td>
                    <td>Java nâng cao</td>
                    <td>
                        <a href="ViewTeacher" class="btn btn-sm btn-info"><i class="fas fa-eye"></i> Xem</a>
                        <a href="UpdateTeacher" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Sửa</a>
                        <a href="DeleteTeacher" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                    </td>
                    <td>
                        <select class="form-select form-select-sm">
                            <option>Đang dạy</option>
                            <option selected>Ngừng dạy</option>
                        </select>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#teacherTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthMenu": [5, 10, 20],
                "language": {
                    "search": "Tìm kiếm:",
                    "lengthMenu": "Hiển thị _MENU_ giáo viên",
                    "info": "Hiển thị _START_ đến _END_ của _TOTAL_ giáo viên",
                    "infoEmpty": "Không có dữ liệu",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Tiếp",
                        "previous": "Trước"
                    }
                }
            });
        });
    </script>
</body>
</html>
