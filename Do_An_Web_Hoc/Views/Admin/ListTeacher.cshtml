@model IEnumerable<Do_An_Web_Hoc.Models.UserAccount>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Danh sách giáo viên";
}

<div class="container mt-4">
    <h2 class="d-flex align-items-center gap-2 fw-bold text-primary border-bottom pb-2 mb-4">
        <i class="fas fa-chalkboard-teacher fa-lg"></i>
        Danh sách giáo viên
    </h2>

    <div class="mb-3">
        <label class="form-label fw-bold me-2">Lọc trạng thái:</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input status-filter" type="checkbox" value="Đang dạy" id="statusTeaching" checked>
            <label class="form-check-label" for="statusTeaching">Đang dạy</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input status-filter" type="checkbox" value="Ngừng dạy" id="statusStopped" checked>
            <label class="form-check-label" for="statusStopped">Ngừng dạy</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input status-filter" type="checkbox" value="Bị cấm" id="statusBanned" checked>
            <label class="form-check-label" for="statusBanned">Bị cấm</label>
        </div>
    </div>

    <table id="teacherTable" class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th class="text-center">STT</th>
                <th class="text-center">Tên giáo viên</th>
                <th class="text-center">Email</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                var statusText = teacher.Status == 1 ? "Đang dạy" : teacher.Status == 2 ? "Ngừng dạy" : "Bị cấm";
                <tr class="text-center">
                    <td>@teacher.UserID</td>
                    <td>@teacher.UserName</td>
                    <td>@teacher.Email</td>
                    <td data-status="@statusText">
                        @if (teacher.Status == 1)
                        {
                            <span class="badge bg-success">Đang dạy</span>
                        }
                        else if (teacher.Status == 2)
                        {
                            <span class="badge bg-secondary">Ngừng dạy</span>
                        }
                        else
                        {
                            <span class="badge bg-dark">Bị cấm</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("ViewTeacher", "Admin", new { id = teacher.UserID })" class="btn btn-sm btn-info"><i class="fas fa-eye"></i> Xem</a>
                        <a href="@Url.Action("UpdateTeacher", "Admin", new { id = teacher.UserID })" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Sửa</a>
                        <a href="@Url.Action("DeleteTeacher", "Admin", new { id = teacher.UserID })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#teacherTable').DataTable({
                lengthMenu: [5, 10, 20],
                language: {
                    search: "Tìm kiếm:",
                    lengthMenu: "Hiển thị _MENU_ giáo viên",
                    info: "Hiển thị _START_ đến _END_ của _TOTAL_ giáo viên",
                    paginate: {
                        first: "Đầu", last: "Cuối", next: "Tiếp", previous: "Trước"
                    }
                }
            });

            $('.status-filter').on('change', function () {
                var selected = $('.status-filter:checked').map(function () {
                    return $(this).val();
                }).get();

                table.rows().every(function () {
                    var row = $(this.node());
                    var status = row.find('td[data-status]').data('status');
                    var visible = selected.includes(status);
                    row.toggle(visible);
                });
            });
        });
    </script>
}
