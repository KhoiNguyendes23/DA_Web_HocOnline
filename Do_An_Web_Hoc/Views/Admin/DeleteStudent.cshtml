@model Do_An_Web_Hoc.Models.UserAccount
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Xóa mềm học viên";
}

<div class="container mt-5">
    <h3 class="text-danger mb-4">Xóa mềm học viên</h3>

    <div class="card p-4 shadow-sm">
        <h5>Họ tên: @Model.FullName</h5>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Ngày sinh:</strong> @Model.Birthday?.ToString("dd/MM/yyyy")</p>
        <p>
            <strong>Trạng thái hiện tại:</strong>
            @(Model.Status == 1 ? "Hoạt động" : Model.Status == 2 ? "Ngừng hoạt động" : "Bị cấm")
        </p>
    </div>

    <div class="mt-4">
        <form asp-action="DeleteStudent" method="post" class="d-inline">
            <input type="hidden" name="id" value="@Model.UserID" />
            <input type="hidden" name="statusId" value="2" />
            <button type="submit" class="btn btn-warning">Ngừng hoạt động</button>
        </form>

        <form asp-action="DeleteStudent" method="post" class="d-inline ms-2">
            <input type="hidden" name="id" value="@Model.UserID" />
            <input type="hidden" name="statusId" value="3" />
            <button type="submit" class="btn btn-danger">Bị cấm</button>
        </form>

        <a asp-action="ListStudent" class="btn btn-secondary ms-2">Quay lại</a>
    </div>
</div>
