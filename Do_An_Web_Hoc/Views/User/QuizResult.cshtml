@{
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
    ViewData["Title"] = "Kết quả làm bài";

    int correctAnswers = (int)ViewBag.CorrectAnswers;
    int totalQuestions = (int)ViewBag.TotalQuestions;

    double score = (double)ViewBag.Score;
    int totalMarks = (int)ViewBag.Total;
    int examId = (int)ViewBag.ExamID;
}
<div class="container mt-4 text-center">
    <h2 class="text-success">🎉 Bạn đã hoàn thành bài kiểm tra!</h2>

    <p class="fs-4 mt-3">✅ Số câu đúng: <strong>@correctAnswers / @totalQuestions</strong></p>
    <p class="fs-4">🎯 Điểm: <strong>@score</strong> / @totalMarks</p>

    <div class="d-flex justify-content-center gap-3 mt-4">
        <a asp-action="Dashboard" asp-controller="User" class="btn btn-primary">Quay lại Trang chính</a>
        <a asp-action="QuizSelection" asp-controller="User" asp-route-examId="@examId" class="btn btn-success">Tiếp tục làm phần khác</a>
    </div>
</div>
