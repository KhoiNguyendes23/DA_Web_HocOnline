@model IEnumerable<Do_An_Web_Hoc.Models.Courses>

<link rel="stylesheet" href="~/css/Enrolled.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

@{
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
    ViewData["Title"] = "Khóa Học Bạn Đã Đăng Ký";
}

<div class="container-fluid px-4 mt-4">
    <h2 class="section-title">
        <i class="fas fa-book-reader text-success me-2"></i> Khóa Học Bạn Đã Đăng Ký
    </h2>

    <hr class="my-3" />

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info">Bạn chưa đăng ký khóa học nào.</div>
            </div>
        }
        else
        {
            @foreach (var course in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@course.ImageUrl" class="card-img-top" style="height:200px; object-fit:cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@course.CourseName</h5>

                            @if (course.Type == Do_An_Web_Hoc.Models.CourseType.Video)
                            {
                                <span class="badge bg-primary mb-2">Video</span>
                            }
                            else if (course.Type == Do_An_Web_Hoc.Models.CourseType.Live)
                            {
                                <span class="badge bg-success mb-2">Trực tuyến</span>
                            }

                            <p class="card-text mt-2">@course.Description</p>
                        </div>
                        <div class="card-footer bg-transparent border-0 text-center">
                            @if (course.Type == Do_An_Web_Hoc.Models.CourseType.Live)
                            {
                                <a asp-action="JoinBBB" asp-route-courseId="@course.CourseID" class="custom-btn success">
                                    <i class="fas fa-video"></i> Tham gia BBB
                                </a>
                            }
                            else
                            {
                                <a asp-action="LearnCourse" asp-route-id="@course.CourseID" class="custom-btn primary">
                                    <i class="fas fa-play-circle"></i> HỌC NGAY
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
