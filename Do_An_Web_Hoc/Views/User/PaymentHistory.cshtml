@{
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
    ViewData["Title"] = "Lịch sử thanh toán";
    var paidCourses = ViewBag.PaidCourses as IEnumerable<dynamic>;
}

<div class="container mt-5">
    <h3 class="mb-4 text-primary">Lịch sử thanh toán khóa học</h3>

    @if (paidCourses == null || !paidCourses.Any())
    {
        <div class="alert alert-info">Bạn chưa thanh toán khóa học nào.</div>
    }
    else
    {
        <div class="row">
            @foreach (var course in paidCourses)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <img src="@course.ImageUrl" class="card-img-top" style="height:200px; object-fit:cover;" alt="Ảnh khóa học" />
                        <div class="card-body">
                            <h5 class="card-title">@course.CourseName</h5>
                            <p class="mb-1"><strong>Giá:</strong> @String.Format("{0:N0}", course.Price) VNĐ</p>
                            <p class="mb-1"><strong>Phương thức:</strong> @course.PaymentMethod</p>
                            <p class="mb-1"><strong>Ngày thanh toán:</strong> @(((DateTime)course.PaymentDate).ToString("dd/MM/yyyy HH:mm"))</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
