@model IEnumerable<Do_An_Web_Hoc.Models.Courses>

@{
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
    ViewData["Title"] = "Trang Người dùng";
}

<div class="container-fluid px-4 mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">@ViewData["Title"]</h2>

            <!-- FORM TÌM KIẾM KHÓA HỌC -->
            <form method="get" asp-action="Dashboard" class="mb-4 d-flex flex-wrap" style="max-width: 500px;">
                <div class="input-group w-100">
                    <input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm khóa học..." value="@ViewBag.Keyword" />
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i> Tìm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- DANH SÁCH KHÓA HỌC -->
    <div class="row" id="courseContainer">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-warning">Không tìm thấy khóa học nào phù hợp.</div>
            </div>
        }
        else
        {
            @foreach (var course in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@course.ImageUrl" class="card-img-top" alt="Ảnh khóa học" style="height:200px; object-fit:cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@course.CourseName</h5>
                            <p class="card-text">@course.Description</p>
                            <p class="card-text"><strong>Giá:</strong> @course.Price?.ToString("N0") VNĐ</p>
                        </div>
                        <div class="card-footer bg-transparent text-end border-0">
                            <a asp-action="LearnCourse" asp-route-id="@course.CourseID" class="btn btn-primary btn-sm mt-2">
                                <i class="fas fa-play-circle"></i> Học ngay
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
