@model IEnumerable<Do_An_Web_Hoc.Models.Courses>

<link rel="stylesheet" href="~/css/user-dashboard.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">


@{
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
    ViewData["Title"] = "Tất Cả Các Khóa Học Của Chúng Tôi";
    var enrolledCourseIds = ViewBag.EnrolledCourseIds as List<int> ?? new List<int>();
}

<div class="container-fluid px-4 mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="fw-bold fs-2 mb-4">
                <i class="fas fa-graduation-cap text-primary me-2"></i>
                Tất Cả Các Khóa Học Của Chúng Tôi
            </h2>


            <!-- FORM LỌC KHÓA HỌC -->
            <form method="get" asp-action="Dashboard" class="mb-4">
                <div class="input-group">
                    <select name="priceType" class="form-select" style="max-width: 160px;">
                        <option value="">Tất cả khóa học</option>
                        <option value="free" selected="@(ViewBag.PriceType == "free" ? "selected" : null)">Miễn phí</option>
                        <option value="paid" selected="@(ViewBag.PriceType == "paid" ? "selected" : null)">Trả phí</option>
                    </select>

                    <input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm khóa học..." value="@ViewBag.Keyword" />

                    <input type="number" name="maxPrice" class="form-control" placeholder="Giá tối đa (VNĐ)" value="@ViewBag.MaxPrice" min="0" />

                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-filter"></i> Lọc
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- DANH SÁCH KHÓA HỌC -->
    <div class="row" id="courseContainer">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-warning">Không tìm thấy khóa học nào phù hợp.</div>
            </div>
        }
        else
        {
            @foreach (var course in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@course.ImageUrl" class="card-img-top" alt="Ảnh khóa học" style="height:200px; object-fit:cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@course.CourseName</h5>

                            @if (course.Type == Do_An_Web_Hoc.Models.CourseType.Video)
                            {
                                <span class="badge bg-primary mb-2">Video</span>
                            }
                            else if (course.Type == Do_An_Web_Hoc.Models.CourseType.Live)
                            {
                                <div class="d-flex align-items-center justify-content-between mb-2">
                                    <span class="badge bg-success">Trực tuyến</span>
                                    <a href="@Url.Action("JoinBBB", "User", new { courseId = course.CourseID })"
                                       class="btn btn-sm btn-outline-primary ms-2">
                                        <i class="fas fa-video"></i> Tham gia BBB
                                    </a>
                                </div>
                            }
                            else
                            {
                                <span class="badge bg-secondary mb-2">Chưa phân loại</span>
                            }

                            <p class="card-text mt-2">@course.Description</p>
                        </div>


                        <div class="card-footer bg-transparent text-end border-0">
                            @if (enrolledCourseIds.Contains(course.CourseID))
                            {
                                <a asp-action="LearnCourse" asp-route-id="@course.CourseID" class="custom-btn primary">
                                    <i class="fas fa-play-circle"></i> HỌC NGAY
                                </a>                            }
                            else
                            {
                                <p class="card-text course-price"><strong>Giá:</strong> @(course.Price > 0 ? course.Price?.ToString("N0") + " VNĐ" : "Miễn phí")</p>
                                <form method="post" asp-action="RegisterCourse" asp-controller="User">
                                    <input type="hidden" name="courseId" value="@course.CourseID" />
                                    <button type="submit" class="custom-btn success">
                                        <i class="fas fa-plus-circle"></i> ĐĂNG KÝ
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
