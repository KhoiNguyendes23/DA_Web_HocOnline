@model IEnumerable<Do_An_Web_Hoc.Models.Courses>

@{
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
    ViewData["Title"] = "Khóa học miễn phí";
}

<div class="container-fluid px-4 mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info">Hiện chưa có khóa học miễn phí nào.</div>
            </div>
        }
        else
        {
            @foreach (var course in Model)
            {
                <div class="col-12 col-sm-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@course.ImageUrl" class="card-img-top" style="height:200px; object-fit:cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@course.CourseName</h5>
                            <p class="card-text">@course.Description</p>
                            <p class="card-text"><strong>Giá:</strong> Miễn phí</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
