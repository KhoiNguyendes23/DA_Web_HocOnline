@model IEnumerable<Do_An_Web_Hoc.Models.ViewModels.RankingViewModel>
@{
    ViewData["Title"] = "Bảng xếp hạng";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<div class="container mt-4">
    <h3 class="text-center text-primary mb-4">🏆 Bảng xếp hạng học viên</h3>

    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Hạng</th>
                <th>Họ tên</th>
                <th>Số bài kiểm tra</th>
                <th>Tổng điểm</th>
            </tr>
        </thead>
        <tbody>
            @{
                int rank = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@rank</td>
                        <td>@item.FullName</td>
                        <td>@item.QuizCount</td>
                        <td>@item.TotalScore</td>
                    </tr>
                    rank++;
                }
            }
        </tbody>
    </table>
</div>
