@{
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
    ViewData["Title"] = "Chọn bài kiểm tra";

    var examList = ViewBag.Exams as List<Do_An_Web_Hoc.Models.Exams>;
}

<div class="container mt-5">
    <h3 class="text-center text-success mb-4">📋 Chọn bài kiểm tra để bắt đầu</h3>

    <div class="row justify-content-center">
        @foreach (var exam in examList)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title">@exam.ExamName</h5>
                            <p class="text-muted">@exam.Description</p>
                            <p class="fw-bold">Tổng điểm: @exam.TotalMarks</p>
                        </div>
                        <a href="@Url.Action("QuizSelection", "User", new { examId = exam.ExamID })" class="btn btn-primary mt-3">
                            Bắt đầu
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
