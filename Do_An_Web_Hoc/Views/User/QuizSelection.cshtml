@{
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
    ViewData["Title"] = "Chọn Quiz";

    var quizzes = ViewBag.Quizzes as List<Do_An_Web_Hoc.Models.Quizzes>;
    var examName = ViewBag.ExamName as string;
    var completedQuizIds = ViewBag.CompletedQuizIds as List<int>;
}

<div class="container mt-5">
    <h3 class="text-center text-success mb-4">📚 @examName - Chọn phần Quiz</h3>

    @if (quizzes != null && quizzes.Any())
    {
        <div class="row">
            @foreach (var quiz in quizzes)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title">@quiz.QuizName</h5>
                                <p class="card-text mb-1">Tổng điểm: <strong>@quiz.TotalMarks</strong></p>
                            </div>

                            <div class="mt-3">
                                <a asp-action="TakeQuiz" asp-route-quizId="@quiz.QuizID" class="btn btn-primary w-100">
                                    @(completedQuizIds != null && completedQuizIds.Contains(quiz.QuizID) ? "Làm lại" : "Bắt đầu")
                                </a>

                                @if (completedQuizIds != null && completedQuizIds.Contains(quiz.QuizID))
                                {
                                    <div class="text-end mt-2">
                                        <span class="badge bg-success">Đã hoàn thành</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">Không có quiz nào trong bài kiểm tra này.</div>
    }
</div>
