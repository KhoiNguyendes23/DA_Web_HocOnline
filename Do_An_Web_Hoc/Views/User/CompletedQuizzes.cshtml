@model IEnumerable<Do_An_Web_Hoc.Models.Quizzes>

@{
    ViewData["Title"] = "Bài kiểm tra đã hoàn thành";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<div class="container mt-4">
    <h3 class="text-primary text-center mb-4">📘 Bài kiểm tra đã hoàn thành</h3>

    @if (Model.Any())
    {
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Tên bài kiểm tra</th>
                    <th>Mô tả</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quiz in Model)
                {
                    <tr>
                        <td>@quiz.QuizID</td>
                        <td>@quiz.QuizName</td>
                        <td>@quiz.Description</td>
                        <td>
                            <a href="@Url.Action("ReviewResult", "User", new { quizId = quiz.QuizID })" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Xem lại
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center">Bạn chưa hoàn thành bài kiểm tra nào.</div>
    }
</div>
