@{
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<div class="container mt-5">
    <div class="card p-4 shadow-sm">
        <h4 class="text-primary fw-bold mb-4">Liên hệ giảng viên</h4>
        <form>
            <div class="mb-3">
                <label class="form-label">Chọn giảng viên</label>
                <select class="form-select">
                    <option>Thầy Nguyễn Văn A</option>
                    <option>Cô Trần Thị B</option>
                    <option>Thầy Lê Văn C</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Nội dung</label>
                <textarea class="form-control" rows="4" placeholder="Nhập nội dung cần trao đổi..."></textarea>
            </div>
            <button class="btn btn-primary">Gửi tin nhắn</button>
        </form>
    </div>
</div>

