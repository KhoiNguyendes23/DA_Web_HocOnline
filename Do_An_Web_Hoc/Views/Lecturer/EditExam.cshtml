@model Do_An_Web_Hoc.ViewModels.ExamEditViewModel

@{
    Layout = "~/Views/Shared/_LayoutLecturer.cshtml";
    ViewData["Title"] = "Chỉnh sửa bài kiểm tra";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<style>
    .quiz-block .card-header span {
        font-weight: bold;
    }

    .question-block {
        background-color: #f9f9f9;
    }
</style>

<div class="container mt-5">
    <h2 class="text-primary text-center mb-4">Chỉnh sửa bài kiểm tra</h2>

    <form asp-action="EditExam" method="post" onsubmit="return validateQuizTotalMarks()">
        <input asp-for="ExamID" type="hidden" />

        <!-- Nav Tabs -->
        <ul class="nav nav-tabs mb-4" id="examTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab">Thông tin</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="quiz-tab" data-bs-toggle="tab" data-bs-target="#quiz" type="button" role="tab">Danh sách Quiz</button>
            </li>
        </ul>

        <div class="tab-content" id="examTabContent">
            <!-- Thông tin bài kiểm tra -->
            <div class="tab-pane fade show active" id="info" role="tabpanel">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ExamName" class="form-label"></label>
                        <input asp-for="ExamName" class="form-control" />
                        <span asp-validation-for="ExamName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TotalMarks" class="form-label"></label>
                        <input asp-for="TotalMarks" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Duration" class="form-label">Thời gian làm bài (phút)</label>
                        <input asp-for="Duration" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="StartTime" class="form-label">Thời gian bắt đầu</label>
                        <input asp-for="StartTime" class="form-control" type="datetime-local" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="EndTime" class="form-label">Thời gian kết thúc</label>
                        <input asp-for="EndTime" class="form-control" type="datetime-local" />
                    </div>
                </div>
            </div>

            <!-- Danh sách Quiz -->
            <div class="tab-pane fade" id="quiz" role="tabpanel">
                <div id="quizContainer"></div>
                <button type="button" class="btn btn-success mb-4" onclick="addQuiz()">
                    <i class="fas fa-plus"></i> Thêm Quiz
                </button>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu thay đổi</button>
            <a asp-action="ListExam" class="btn btn-secondary"><i class="fas fa-times"></i> Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script id="quiz-data-json" type="application/json">@Html.Raw(Json.Serialize(Model.Quizzes))</script>
    <script src="~/js/exam-edit.js"></script>
}
