@{
    ViewData["Title"] = "Bảng điều khiển";
    Layout = "~/Views/Shared/_LayoutLecturer.cshtml";
    var courseNames = ViewBag.CourseNames as List<string>;
    var studentCounts = ViewBag.StudentCounts as List<int>;
}

<!-- Font Awesome & Chart.js -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container mt-4">
    <h2 class="mb-4 text-primary">
        <i class="fas fa-chalkboard-teacher"></i> Bảng điều khiển Giảng viên
    </h2>

    <!-- Thẻ thống kê -->
    <div class="row">
        <div class="col-md-3 mb-3">
            <div class="card shadow border-0 text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-book-open"></i> Khóa học</h5>
                    <h3>@ViewBag.CourseCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow border-0 text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-video"></i> Bài giảng</h5>
                    <h3>@ViewBag.LectureCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow border-0 text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-pen-alt"></i> Bài kiểm tra</h5>
                    <h3>@ViewBag.ExamCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow border-0 text-white bg-secondary">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-user-graduate"></i> Học viên</h5>
                    <h3>@ViewBag.StudentCount</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Biểu đồ: Học viên theo khóa học -->
    @if (courseNames != null && courseNames.Any())
    {
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title text-primary">
                    <i class="fas fa-chart-bar"></i> Số học viên theo từng khóa học
                </h5>
                <canvas id="courseChart" height="100"></canvas>
            </div>
        </div>

        <script>
            var ctx = document.getElementById('courseChart').getContext('2d');
            var chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(courseNames)),
                    datasets: [{
                        label: 'Số học viên',
                        data: @Html.Raw(Json.Serialize(studentCounts)),
                        backgroundColor: 'rgba(54, 162, 235, 0.6)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    }
                }
            });
        </script>
    }
</div>
