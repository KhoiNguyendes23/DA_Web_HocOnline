@model Do_An_Web_Hoc.ViewModels.ExamEditViewModel

@{
    Layout = "~/Views/Shared/_LayoutLecturer.cshtml";
    ViewData["Title"] = "Thêm bài kiểm tra";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/exam-form.css" />

<div class="container mt-4">
    <h2 class="text-primary text-center mb-4">Thêm bài kiểm tra</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">Vui lòng kiểm tra lại thông tin!</div>
    }

    <form asp-action="AddExam" method="post">
        <div class="mb-3">
            <label asp-for="ExamName" class="form-label">Tên bài kiểm tra</label>
            <input asp-for="ExamName" class="form-control" />
            <span asp-validation-for="ExamName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="TotalMarks" class="form-label">Tổng điểm</label>
                <input asp-for="TotalMarks" type="number" class="form-control" />
                <span asp-validation-for="TotalMarks" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="StartTime" class="form-label">Bắt đầu</label>
                <input asp-for="StartTime" class="form-control" type="datetime-local" />
            </div>
            <div class="col-md-4">
                <label asp-for="EndTime" class="form-label">Kết thúc</label>
                <input asp-for="EndTime" class="form-control" type="datetime-local" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="CourseID" class="form-label">Khóa học</label>
            <select asp-for="CourseID" asp-items="ViewBag.CourseList" class="form-select">
                <option value="">-- Chọn khóa học --</option>
            </select>
            <span asp-validation-for="CourseID" class="text-danger"></span>
        </div>

        <!-- Danh sách Quiz -->
        <div class="mb-3">
            <label class="form-label">Danh sách Quiz</label>
            <button type="button" class="btn btn-success mb-2" onclick="addQuiz()">
                <i class="fas fa-plus"></i> Thêm Quiz
            </button>
            <div id="quizList"></div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Lưu bài kiểm tra
            </button>
            <a asp-action="ListExam" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/exam-add.js"></script>
}