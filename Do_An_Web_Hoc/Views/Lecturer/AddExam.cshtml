@model Do_An_Web_Hoc.Models.Exams

@{
    Layout = "~/Views/Shared/_LayoutLecturer.cshtml";
    ViewData["Title"] = "Thêm bài kiểm tra";
}

<div class="container mt-4">
    <h2 class="text-primary text-center mb-4">Thêm bài kiểm tra</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">Vui lòng kiểm tra lại thông tin!</div>
    }

    <form asp-action="AddExam" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="ExamName" class="form-label">Tên bài kiểm tra</label>
            <input asp-for="ExamName" class="form-control" />
            <span asp-validation-for="ExamName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TotalMarks" class="form-label">Tổng điểm</label>
            <input asp-for="TotalMarks" type="number" class="form-control" />
            <span asp-validation-for="TotalMarks" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CourseID" class="form-label">Mã khóa học</label>
            <input asp-for="CourseID" type="number" class="form-control" />
            <span asp-validation-for="CourseID" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Tên kiểm tra nhỏ (Quiz)</label>
            <input name="QuizName" class="form-control" placeholder="VD: Kiểm tra giữa kỳ" />
        </div>
        <div class="mb-3">
            <label class="form-label">Danh sách câu hỏi</label>
            <button type="button" class="btn btn-sm btn-success mb-2" onclick="addQuestion()">+ Thêm câu hỏi</button>
            <div id="questionList"></div>
        </div>

       
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Lưu bài kiểm tra
            </button>
            <a asp-action="ListExam" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function addQuestion() {
            const index = document.querySelectorAll(".question-box").length;
            const box = document.createElement("div");
            box.className = "question-box border p-3 rounded mb-3";

            box.innerHTML = `
                <label class="form-label fw-bold">Câu hỏi ${index + 1}</label>
                <input name="Questions[${index}].QuestionText" class="form-control mb-2" placeholder="Nhập nội dung câu hỏi" required>

                <label>Loại câu hỏi</label>
                <select name="Questions[${index}].QuestionType" class="form-select mb-2" onchange="toggleAnswerFields(this, ${index})" required>
                    <option value="">-- Chọn loại câu hỏi --</option>
                    <option value="Tự luận">Tự luận</option>
                    <option value="Trắc nghiệm">Trắc nghiệm</option>
                </select>

                <div class="answer-area" id="answer-area-${index}"></div>

                <button type="button" class="btn btn-danger mt-2" onclick="this.closest('.question-box').remove()">Xóa câu hỏi</button>
            `;

            document.getElementById("questionList").appendChild(box);
        }

        function toggleAnswerFields(select, index) {
            const area = document.getElementById(`answer-area-${index}`);
            const type = select.value;

            if (type === "Trắc nghiệm") {
                area.innerHTML = `
                    <label>Đáp án A</label>
                    <input name="Questions[${index}].OptionA" class="form-control mb-2" required>

                    <label>Đáp án B</label>
                    <input name="Questions[${index}].OptionB" class="form-control mb-2" required>

                    <label>Đáp án C</label>
                    <input name="Questions[${index}].OptionC" class="form-control mb-2" required>

                    <label>Đáp án D</label>
                    <input name="Questions[${index}].OptionD" class="form-control mb-2" required>

                    <label>Đáp án đúng</label>
                    <select name="Questions[${index}].CorrectAnswer" class="form-select mb-2" required>
                        <option value="">-- Chọn đáp án đúng --</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                    </select>
                `;
            } else {
                area.innerHTML = ''; // Tự luận không cần đáp án
            }
        }
    </script>
}
