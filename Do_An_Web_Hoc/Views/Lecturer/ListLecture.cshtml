@model IEnumerable<Do_An_Web_Hoc.Models.Lectures>

@{
    Layout = "~/Views/Shared/_LayoutLecturer.cshtml";
    ViewData["Title"] = "Danh sách bài giảng";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />

<div class="container mt-4">
    <h3 class="text-primary text-center mb-4">Danh sách bài giảng</h3>

    <table id="lectureTable" class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Tiêu đề</th>
                <th>Video</th>
                <th>Tài liệu</th>
                <th>Khóa học</th>
                <th>Ngày tạo</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@index++</td>
                        <td>@item.Title</td>

                        <!-- Hiển thị thumbnail video nếu có -->
                        <td>
                            @if (!string.IsNullOrEmpty(item.VideoUrl))
                            {
                                <video width="120" height="70" controls muted>
                                    <source src="@item.VideoUrl" type="video/mp4" />
                                    Trình duyệt không hỗ trợ video.
                                </video>
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>

                        <!-- Hiển thị link tài liệu nếu có -->
                        <td>
                            @if (!string.IsNullOrEmpty(item.DocumentURL))
                            {
                                <a href="@item.DocumentURL" class="btn btn-sm btn-outline-secondary" target="_blank">
                                    <i class="fas fa-file-alt"></i> Tài liệu
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>

                        <td>@item.CourseID</td>
                        <td>@item.CreateAt?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a class="btn btn-sm btn-warning" href="@Url.Action("EditLecture", "Lecturer", new { id = item.LectureID })"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-sm btn-danger" href="@Url.Action("DeleteLecture", "Lecturer", new { id = item.LectureID })"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-danger">Không có dữ liệu bài giảng</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-3">
        <a class="btn btn-success" href="@Url.Action("AddLecture", "Lecturer")"><i class="fas fa-plus"></i> Thêm bài giảng</a>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#lectureTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                lengthMenu: [5, 10, 25, 50],
                language: {
                    search: "Tìm kiếm:",
                    lengthMenu: "Hiển thị _MENU_ bài giảng",
                    info: "Hiển thị _START_ đến _END_ của _TOTAL_ bài giảng",
                    infoEmpty: "Không có dữ liệu",
                    paginate: {
                        first: "Đầu",
                        last: "Cuối",
                        next: "Tiếp",
                        previous: "Trước"
                    },
                    zeroRecords: "Không tìm thấy kết quả phù hợp"
                }
            });
        });
    </script>
}
