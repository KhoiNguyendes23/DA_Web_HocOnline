@model IEnumerable<Do_An_Web_Hoc.Models.Lectures>

@{
    Layout = "~/Views/Shared/_LayoutLecturer.cshtml";
    ViewData["Title"] = "Danh sách bài giảng";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />

<div class="container mt-4">
    <h3 class="text-primary text-center mb-4">📚 Danh sách bài giảng</h3>

    <!-- Nút Thêm bài giảng -->
    <div class="d-flex justify-content-start mb-3">
        <a class="btn btn-success btn-md shadow" href="@Url.Action("AddLecture", "Lecturer")">
            <i class="fas fa-plus-circle"></i> Thêm bài giảng
        </a>
    </div>

    <table id="lectureTable" class="table table-striped table-hover table-bordered rounded shadow-sm">
        <thead class="bg-primary text-white text-center">
            <tr>
                <th><i class="fas fa-id-badge"></i> ID</th>
                <th><i class="fas fa-heading"></i> Tiêu đề</th>
                <th><i class="fas fa-align-left"></i> Mô tả</th>
                <th><i class="fas fa-video"></i> Video</th>
                <th><i class="fas fa-file-alt"></i> Tài liệu</th>
                <th><i class="fas fa-book"></i> Khóa học</th>
                <th><i class="fas fa-calendar-alt"></i> Ngày tạo</th>
                <th><i class="fas fa-cogs"></i> Hành động</th>
            </tr>
        </thead>
        <tbody class="align-middle text-center">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.LectureID</td>
                        <td class="fw-bold">@item.Title</td>
                        <td>@(string.IsNullOrEmpty(item.Content) ? "<span class='text-muted fst-italic'>Không có</span>" : item.Content)</td>

                        <!-- Video -->
                        <td>
                            @if (!string.IsNullOrEmpty(item.VideoUrl))
                            {
                                if (item.VideoUrl.Contains("drive.google.com"))
                                {
                                    <iframe src="@item.VideoUrl" width="120" height="70" allowfullscreen style="border:none;"></iframe>
                                }
                                else if (item.VideoUrl.Contains("watch?v="))
                                {
                                    var embedUrl = item.VideoUrl.Replace("watch?v=", "embed/");
                                    <iframe width="120" height="70" src="@embedUrl" frameborder="0" allowfullscreen></iframe>
                                }
                                else if (item.VideoUrl.EndsWith(".mp4") || item.VideoUrl.StartsWith("http"))
                                {
                                    <video width="120" height="70" controls muted>
                                        <source src="@item.VideoUrl" type="video/mp4" />
                                    </video>
                                }
                                else
                                {
                                    <span class="text-muted">Không hỗ trợ</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>

                        <!-- Tài liệu -->
                        <td>
                            @if (!string.IsNullOrEmpty(item.DocumentURL))
                            {
                                <a href="@item.DocumentURL" class="btn btn-sm btn-outline-secondary" target="_blank">
                                    <i class="fas fa-file-download"></i> Xem
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>

                        <td>@item.CourseID</td>

                        <!-- Ngày tạo -->
                        <td>
                            @if (item.CreateAt.HasValue)
                            {
                                @item.CreateAt.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>

                        <!-- Hành động -->
                        <td>
                            <a class="btn btn-sm btn-outline-warning me-1" title="Chỉnh sửa"
                               href="@Url.Action("EditLecture", "Lecturer", new { id = item.LectureID })">
                                <i class="fas fa-pen"></i>
                            </a>
                            <a class="btn btn-sm btn-outline-danger" title="Xóa"
                               href="@Url.Action("DeleteLecture", "Lecturer", new { id = item.LectureID })">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center text-danger fw-bold">Không có dữ liệu bài giảng</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    iframe, video {
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
</style>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#lectureTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                lengthMenu: [5, 10, 25, 50],
                language: {
                    search: "Tìm kiếm:",
                    lengthMenu: "Hiển thị _MENU_ bài giảng",
                    info: "Hiển thị _START_ đến _END_ của _TOTAL_ bài giảng",
                    infoEmpty: "Không có dữ liệu",
                    paginate: {
                        first: "Đầu",
                        last: "Cuối",
                        next: "Tiếp",
                        previous: "Trước"
                    },
                    zeroRecords: "Không tìm thấy kết quả phù hợp"
                }
            });
        });
    </script>
}
