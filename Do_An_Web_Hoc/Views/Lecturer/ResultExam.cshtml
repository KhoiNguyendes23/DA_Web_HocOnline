@model IEnumerable<Do_An_Web_Hoc.Models.ViewModels.ResultExamViewModel>

@{
    ViewData["Title"] = "Kết quả bài kiểm tra";
    Layout = "~/Views/Shared/_LayoutLecturer.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4"><i class="fas fa-poll"></i> Kết quả bài kiểm tra</h2>

    <table class="table table-bordered table-striped">
        <thead class="table-primary">
            <tr>
                <th>Học viên</th>
                <th>Bài kiểm tra</th>
                <th>Quiz</th>
                <th>Điểm</th>
                <th>Thời gian nộp</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StudentName</td>
                    <td>@item.ExamName</td>
                    <td>@item.QuizName</td>
                    <td>@item.Score / @item.TotalMarks</td>
                    <td>@item.SubmissionTime?.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
